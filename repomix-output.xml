  icon: string
  title: string
  description: string
  link?: string
}

const { icon, title, description, link } = Astro.props
---

<div class="glass-card">
  <div class="icon-container">
    <img src={icon} alt="" />
  </div>
  <h3>{title}</h3>
  <p>{description}</p>
  {link && <a href={link}>Learn More →</a>}
</div>

<style>
