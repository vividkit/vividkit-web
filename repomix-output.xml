  indigo: 'step-indicator--indigo'
};

const audienceIcons: Record<string, any> = {
  users: Users,
  video: Video,
  rocket: Rocket,
  code: Code,
  layers: Layers,
  zap: Zap,
  palette: Palette,
  target: Target,
  package: Package
};

const buildIcons: Record<string, any> = {
