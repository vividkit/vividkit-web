          <button id="theme-toggle" class="p-2 rounded-xl glass-card text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors cursor-pointer" aria-label="Toggle theme">
            <!-- Sun icon (shown in dark mode) -->
            <svg class="w-5 h-5 text-slate-700 dark:text-yellow-400 hidden dark:block sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
