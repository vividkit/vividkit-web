const { class: className = '' } = Astro.props;
---

<header class="fixed top-4 left-4 right-4 z-50 transition-all duration-300" id="main-header">
  <div class="glass-card rounded-2xl max-w-6xl mx-auto shadow-sm">
    <div class="px-6 py-4">
      <div class="flex items-center justify-between">
        <a href="/#hero" class="flex items-center gap-3 hover:opacity-80 transition-opacity cursor-pointer">
          <Logo size="md" />
        </a>

        <nav class="hidden md:flex items-center gap-1">
          <a href="/#hero" class="nav-link active px-4 py-2 rounded-lg text-sm font-medium">Home</a>
          <a href="/#features" class="nav-link px-4 py-2 rounded-lg text-sm font-medium">Features</a>
          <a href="/#pricing" class="nav-link px-4 py-2 rounded-lg text-sm font-medium">Pricing</a>
