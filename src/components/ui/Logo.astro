---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  showText?: boolean;
  class?: string;
}

const {
  size = 'md',
  showText = true,
  class: className = ''
} = Astro.props;

const sizeMap = {
  sm: 32,
  md: 48,
  lg: 64
};

const svgSize = sizeMap[size];
---

<div class={`flex items-center gap-3 ${className}`}>
  <div class="relative flex items-center justify-center">
    <div class="absolute inset-0 bg-gradient-to-tr from-blue-500/20 via-sky-500/20 to-cyan-500/20 blur-xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    <svg
      class="flex-shrink-0 relative z-10 drop-shadow-[0_0_15px_rgba(37,99,235,0.2)]"
      width={svgSize}
      height={svgSize}
      viewBox="0 0 40 40"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <linearGradient id="vkGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#2563eb;stop-opacity:1" /> <!-- Blue-600 -->
          <stop offset="50%" style="stop-color:#0ea5e9;stop-opacity:1" /> <!-- Sky-500 -->
          <stop offset="100%" style="stop-color:#06b6d4;stop-opacity:1" /> <!-- Cyan-500 -->
        </linearGradient>
      </defs>
      <!-- V letter -->
      <path
        d="M6 10 L14 30 L22 10"
        stroke="url(#vkGradient)"
        stroke-width="3.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        fill="none"
      />
      <!-- K letter -->
      <path
        d="M26 10 L26 30 M26 20 L34 10 M26 20 L34 30"
        stroke="url(#vkGradient)"
        stroke-width="3.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        fill="none"
      />
    </svg>
  </div>

  {showText && (
    <div class="flex flex-col justify-center">
      <span class="text-xl font-heading font-bold bg-gradient-to-r from-blue-600 via-sky-500 to-cyan-500 bg-clip-text text-transparent leading-none mb-1">
        VividKit
      </span>
      <span class="text-xs text-slate-500 dark:text-slate-400 font-medium tracking-wide">
        Crystal clear AI coding
      </span>
    </div>
  )}
</div>
