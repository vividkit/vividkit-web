---
interface Props {
  id?: string;
  name?: string;
  value?: string;
  placeholder?: string;
  rows?: number;
  required?: boolean;
  class?: string;
}

const {
  id,
  name,
  value,
  placeholder,
  rows = 4,
  required = false,
  class: className = ''
} = Astro.props;
---

<textarea
  id={id}
  name={name}
  rows={rows}
  placeholder={placeholder}
  required={required}
  class={`w-full px-5 py-4 rounded-xl bg-white dark:bg-surface-950 border border-slate-200 dark:border-slate-700
          focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all
          text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500
          resize-vertical ${className}`}
>{value}</textarea>