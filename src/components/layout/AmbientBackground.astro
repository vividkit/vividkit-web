---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`fixed inset-0 -z-10 overflow-hidden ${className}`}>
  <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950"></div>
  <div class="aurora-container">
    <div class="aurora-1"></div>
    <div class="aurora-2"></div>
    <div class="aurora-3"></div>
  </div>
</div>

<style>
  .aurora-container {
    position: absolute;
    inset: 0;
    filter: blur(100px);
    opacity: 0.3;
  }

  .aurora-1 {
    position: absolute;
    top: -20%;
    left: -20%;
    width: 50vw;
    height: 50vh;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 0%, transparent 70%);
    animation: float 20s infinite ease-in-out;
  }

  .aurora-2 {
    position: absolute;
    bottom: -20%;
    right: -20%;
    width: 40vw;
    height: 60vh;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.4) 0%, transparent 70%);
    animation: float 25s infinite ease-in-out reverse;
  }

  .aurora-3 {
    position: absolute;
    top: 30%;
    right: 10%;
    width: 30vw;
    height: 40vh;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.4) 0%, transparent 70%);
    animation: float 30s infinite ease-in-out;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .aurora-1,
    .aurora-2,
    .aurora-3 {
      animation: none;
    }
  }
</style>