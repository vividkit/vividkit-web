---
import GlassCard from '@/components/ui/GlassCard.astro';
import Button from '@/components/ui/Button.astro';
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  class?: string;
  lang?: Language;
}

const { class: className = '', lang } = Astro.props;

// Get language from URL if not provided
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section id="features" class={`section py-20 ${className}`}>
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Content -->
      <div>
        <div class="mb-8">
          <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
            {t('features.title')}
            <span class="block bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
              {t('features.subtitle')}
            </span>
          </h2>
          <p class="text-xl text-slate-600 dark:text-slate-400 mb-6">
            {t('features.description')}
          </p>

          <!-- Prerequisites & Setup -->
           <div class="flex flex-wrap gap-4 mb-8 text-sm text-slate-500 dark:text-slate-400">
            <div class="flex items-center gap-2">
               <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
               <span>{t('features.prerequisites')}</span>
            </div>
            <div class="flex items-center gap-2">
               <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
               <span>{t('features.setup')}</span>
            </div>
          </div>
        </div>

        <!-- Feature list -->
        <div class="space-y-4 mb-10">
            <GlassCard variant="light" class="p-4 flex items-center gap-4">
              <div class="text-2xl">ğŸ¨</div>
              <p class="text-slate-700 dark:text-slate-300 font-medium">{t('features.item1')}</p>
            </GlassCard>
            <GlassCard variant="light" class="p-4 flex items-center gap-4">
              <div class="text-2xl">ğŸ”</div>
              <p class="text-slate-700 dark:text-slate-300 font-medium">{t('features.item2')}</p>
            </GlassCard>
            <GlassCard variant="light" class="p-4 flex items-center gap-4">
              <div class="text-2xl">ğŸ¤–</div>
              <p class="text-slate-700 dark:text-slate-300 font-medium">{t('features.item3')}</p>
            </GlassCard>
            <GlassCard variant="light" class="p-4 flex items-center gap-4">
              <div class="text-2xl">ğŸ“Š</div>
              <p class="text-slate-700 dark:text-slate-300 font-medium">{t('features.item4')}</p>
            </GlassCard>
        </div>
      </div>

      <!-- Right: App preview -->
      <div class="relative hidden lg:block">
        <GlassCard variant="glow" class="p-8 min-h-[600px] flex flex-col">
          <!-- Mock Window Header -->
          <div class="flex items-center gap-2 mb-6 border-b border-slate-200 dark:border-slate-700 pb-4">
             <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
             </div>
             <div class="ml-4 text-xs text-slate-400 font-mono">{t('features.window_title')}</div>
          </div>

          <!-- Mock Content -->
          <div class="flex-1 grid grid-cols-12 gap-4">
             <!-- Sidebar -->
             <div class="col-span-3 border-r border-slate-200 dark:border-slate-700 pr-4 space-y-3">
                <div class="h-8 bg-blue-500/10 rounded-lg w-full"></div>
                <div class="h-8 bg-slate-100 dark:bg-slate-800 rounded-lg w-full"></div>
                <div class="h-8 bg-slate-100 dark:bg-slate-800 rounded-lg w-full"></div>
                <div class="h-8 bg-slate-100 dark:bg-slate-800 rounded-lg w-full"></div>
                <div class="mt-8 h-32 bg-slate-50 dark:bg-slate-900 rounded-lg w-full"></div>
             </div>

             <!-- Main Area -->
             <div class="col-span-9 space-y-6">
                <div class="flex justify-between">
                    <div class="h-10 w-32 bg-slate-100 dark:bg-slate-800 rounded-lg"></div>
                    <div class="h-10 w-10 bg-slate-100 dark:bg-slate-800 rounded-full"></div>
                </div>

                <div class="grid grid-cols-3 gap-4">
                    <div class="h-24 bg-slate-50 dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-700"></div>
                    <div class="h-24 bg-slate-50 dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-700"></div>
                    <div class="h-24 bg-slate-50 dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-700"></div>
                </div>

                <div class="h-64 bg-slate-50 dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-700 p-4">
                    <div class="space-y-2">
                        <div class="h-2 w-3/4 bg-slate-200 dark:bg-slate-700 rounded"></div>
                        <div class="h-2 w-1/2 bg-slate-200 dark:bg-slate-700 rounded"></div>
                        <div class="h-2 w-5/6 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    </div>
                </div>
             </div>
          </div>
        </GlassCard>

        <!-- Floating elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-xl"></div>
        <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-br from-purple-400/20 to-pink-400/20 rounded-full blur-xl"></div>
      </div>
    </div>
  </div>
</section>