---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section id="features" class={`section py-24 relative ${className}`}>
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="font-heading text-4xl md:text-5xl font-bold mb-4">VividKit Makes It Simple</h2>
      <p class="text-xl text-slate-600 dark:text-slate-600 dark:text-slate-400">All the power of ClaudeKit, zero terminal friction</p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h3 class="font-heading text-3xl font-bold mb-8">Just Click & Build</h3>
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <div>
              <div class="font-heading font-semibold text-lg mb-1">Visual Workflows</div>
              <div class="text-slate-600 dark:text-slate-600 dark:text-slate-400">Click buttons instead of typing commands. Guided step-by-step.</div>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <div>
              <div class="font-heading font-semibold text-lg mb-1">Smart Prompt Analysis</div>
              <div class="text-slate-600 dark:text-slate-600 dark:text-slate-400">VividKit picks the right commands automatically based on your description.</div>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <div>
              <div class="font-heading font-semibold text-lg mb-1">Save Points</div>
              <div class="text-slate-600 dark:text-slate-600 dark:text-slate-400">Restore to any previous state. Experiment without fear.</div>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <div>
              <div class="font-heading font-semibold text-lg mb-1">Multiple Terminals</div>
              <div class="text-slate-600 dark:text-slate-600 dark:text-slate-400">Run multiple AI agents in parallel. Build faster.</div>
            </div>
          </div>
        </div>
      </div>

      <div class="glass-card glow-border rounded-3xl p-8">
        <div class="aspect-video bg-slate-100 dark:bg-surface-950 rounded-2xl flex items-center justify-center">
          <div class="text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-blue-600/20 to-blue-500/20 flex items-center justify-center float-animation">
              <svg class="w-10 h-10 text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 8h6M9 12h6M9 16h4"/>
              </svg>
            </div>
            <div class="text-slate-500 text-sm font-medium">App Preview Coming Soon</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>