---
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  class?: string;
  lang?: Language;
}

const { class: className = '', lang } = Astro.props;

// Get language from URL if not provided
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section id="pricing" class={`section py-24 relative ${className}`}>
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
        {t('pricing.section_title')}
        <span class="block bg-gradient-to-r from-green-600 to-blue-600 dark:from-green-400 dark:to-blue-400 bg-clip-text text-transparent">
          {t('pricing.section_subtitle')}
        </span>
      </h2>
      <p class="text-xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
        {t('pricing.section_description')}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Free Tier -->
      <div class="glass-card rounded-3xl p-8 border-2 border-green-500/30 relative overflow-hidden hover:border-green-500/50 transition-colors">
        <div class="absolute top-0 right-0 bg-green-600/20 text-green-600 dark:text-green-400 text-xs font-bold px-3 py-1 rounded-bl-xl border-l border-b border-green-500/20">{t('pricing.free.badge')}</div>
        <div class="mb-8">
          <h3 class="font-heading text-2xl font-bold mb-2 text-green-600 dark:text-green-400">{t('pricing.free.title_alt')}</h3>
          <div class="flex items-baseline gap-1">
            <span class="text-4xl font-bold">{t('pricing.free.price')}</span>
          </div>
          <p class="text-slate-600 dark:text-slate-400 mt-4">{t('pricing.free.description_alt')}</p>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.free.feature1')}
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.free.feature2')}
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.free.feature3')}
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.free.feature4')}
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.free.feature5')}
          </li>
        </ul>

        <a href="#waitlist" class="block w-full py-4 rounded-xl bg-green-600/10 hover:bg-green-600/20 text-green-600 dark:text-green-400 border border-green-600/20 transition-colors text-center font-bold">
          {t('pricing.free.cta')}
        </a>
      </div>

      <!-- Pro Tier -->
      <div class="glass-card rounded-3xl p-8 border border-blue-500/30 relative overflow-hidden hover:border-blue-500/50 transition-colors">
        <div class="absolute top-0 right-0 bg-blue-600/20 text-blue-600 dark:text-blue-400 text-xs font-bold px-3 py-1 rounded-bl-xl border-l border-b border-blue-500/20">{t('pricing.pro.coming_soon')}</div>
        <div class="mb-8">
          <h3 class="font-heading text-2xl font-bold mb-2 text-blue-600 dark:text-blue-400">{t('pricing.pro.title_alt')}</h3>
          <div class="flex items-baseline gap-1">
            <span class="text-4xl font-bold">{t('pricing.pro.price_tbd')}</span>
          </div>
          <p class="text-slate-600 dark:text-slate-400 mt-4">{t('pricing.pro.description_alt')}</p>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            <strong>{t('pricing.pro.feature1')}</strong>
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            <strong>{t('pricing.pro.feature2')}</strong>
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.pro.feature3')}
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.pro.feature4')}
          </li>
          <li class="flex items-center gap-3 text-slate-700 dark:text-slate-300">
            <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
            {t('pricing.pro.feature5')}
          </li>
        </ul>

        <a href="#waitlist" class="block w-full py-4 rounded-xl bg-blue-600/10 hover:bg-blue-600/20 text-blue-600 dark:text-blue-400 border border-blue-600/20 transition-colors text-center font-bold">
          {t('pricing.pro.cta')}
        </a>
      </div>
    </div>
  </div>
</section>