---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section id="waitlist" class={`section py-24 relative ${className}`}>
  <div class="max-w-2xl mx-auto px-6 text-center">
    <h2 class="font-heading text-4xl md:text-5xl font-bold mb-6">Join the VividKit Waitlist</h2>
    <p class="text-xl text-slate-600 dark:text-slate-400 mb-12">
      Be among the first to experience AI development without barriers. Free early access for waitlist members.
    </p>

    <div class="glass-card glow-border rounded-3xl p-8">
      <form class="space-y-4" id="waitlist-form">
        <input type="text" placeholder="Your name" required
          class="w-full px-5 py-4 rounded-xl bg-white dark:bg-surface-950 border border-slate-200 dark:border-slate-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500">
        <input type="email" placeholder="Your email" required
          class="w-full px-5 py-4 rounded-xl bg-white dark:bg-surface-950 border border-slate-200 dark:border-slate-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500">
        <select class="w-full px-5 py-4 rounded-xl bg-white dark:bg-surface-950 border border-slate-200 dark:border-slate-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-slate-900 dark:text-white cursor-pointer">
          <option value="" class="text-slate-400 dark:text-slate-500">I'm a...</option>
          <option value="founder">Non-tech founder</option>
          <option value="designer">Designer</option>
          <option value="developer">Developer</option>
          <option value="other">Other</option>
        </select>
        <textarea placeholder="What would you like to build with VividKit? (optional)" rows="3"
          class="w-full px-5 py-4 rounded-xl bg-white dark:bg-surface-950 border border-slate-200 dark:border-slate-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 resize-none"></textarea>
        <button type="submit" class="w-full cta-button px-6 py-4 rounded-xl font-bold text-lg text-white cursor-pointer">
          Join Waitlist
        </button>
      </form>
      <p class="text-xs text-slate-500 mt-4">Free early access. No credit card. No spam.</p>
    </div>

    <div class="mt-12">
      <p class="text-sm text-slate-600 dark:text-slate-500 mb-4">While you wait, get ClaudeKit ready:</p>
      <a href="#claudekit-referral" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl glass-card hover:bg-slate-100 dark:hover:bg-slate-800/60 font-medium transition-all cursor-pointer">
        Get ClaudeKit (20% OFF)
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  document.getElementById('waitlist-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Thanks for joining the waitlist! We\'ll be in touch soon.');
  });
</script>