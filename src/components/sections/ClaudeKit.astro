---
import GlassCard from '@/components/ui/GlassCard.astro';
import Button from '@/components/ui/Button.astro';
import { claudekitHighlights } from '@/data/features';
import { SITE_CONFIG } from '@/data/constants';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section id="claudekit" class={`section py-20 ${className}`}>
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
        Powered by
        <span class="block bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
          ClaudeKit
        </span>
      </h2>
      <p class="text-xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
        VividKit is built on ClaudeKit, bringing you the most advanced AI coding capabilities available.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {claudekitHighlights.map((highlight) => (
        <GlassCard variant="light" class="p-8 text-center">
          <h3 class="text-xl font-semibold mb-4">{highlight.title}</h3>
          <p class="text-slate-600 dark:text-slate-400">{highlight.description}</p>
        </GlassCard>
      ))}
    </div>

    <!-- Partnership CTA -->
    <GlassCard variant="glow" class="p-12 text-center relative overflow-hidden">
      <div class="relative z-10">
        <h3 class="text-3xl font-heading font-bold mb-4">
          Ready to Supercharge Your Coding?
        </h3>
        <p class="text-xl text-slate-600 dark:text-slate-400 mb-8 max-w-2xl mx-auto">
          Experience the full power of ClaudeKit with enhanced features, priority support, and early access to new capabilities.
        </p>
        <Button
          href={`${SITE_CONFIG.claudekitReferralUrl}?utm_source=vividkit&utm_medium=referral&utm_campaign=partnership`}
          size="lg"
          class="inline-flex items-center gap-2"
        >
          Explore ClaudeKit
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </Button>
      </div>

      <!-- Background decoration -->
      <div class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-full blur-2xl"></div>
      <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-full blur-2xl"></div>
    </GlassCard>
  </div>
</section>