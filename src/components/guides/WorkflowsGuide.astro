---
import { v25Workflows as v25WorkflowsEn, v24Workflows as v24WorkflowsEn } from '@/data/guides/workflows';
import { v25Workflows as v25WorkflowsVi, v24Workflows as v24WorkflowsVi } from '@/data/vi/guides/workflows';
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const v25Workflows = currentLang === 'vi' ? v25WorkflowsVi : v25WorkflowsEn;
const v24Workflows = currentLang === 'vi' ? v24WorkflowsVi : v24WorkflowsEn;

const levelColors: Record<string, string> = {
  Beginner: 'bg-green-500/10 text-green-600 dark:text-green-400 border border-green-500/20',
  Intermediate: 'bg-amber-500/10 text-amber-600 dark:text-amber-400 border border-amber-500/20',
  Advanced: 'bg-red-500/10 text-red-600 dark:text-red-400 border border-red-500/20'
};
---

<style>
  @keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  .flow-arrow {
    animation: flow 2s ease-in-out infinite;
  }
</style>

<div class="space-y-8 mt-6">
  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      {t('workflows.guide.title')}
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t('workflows.guide.subtitle')}
    </p>
  </div>

  <!-- Info Banner -->
  <div class="flex items-start gap-4 p-6 rounded-xl bg-purple-500/5 dark:bg-purple-500/10 border border-purple-200 dark:border-purple-500/20">
    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-500/20 flex items-center justify-center">
      <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-1 1.5-2.4 1.5-3.8 0-3.3-2.7-6-6-6-3.3 0-6 2.7-6 6 0 1.4.5 2.8 1.5 3.8.8.8 1.3 1.5 1.5 2.5"/>
        <path d="M9 18h6"/>
        <path d="M10 22h4"/>
      </svg>
    </div>
    <div class="flex-1">
      <div class="font-bold text-purple-700 dark:text-purple-400 mb-1 text-lg">{t('workflows.guide.banner.title')}</div>
      <div class="text-slate-600 dark:text-slate-400 leading-relaxed">
        {t('workflows.guide.banner.description')}
      </div>
    </div>
  </div>

  <!-- Version Toggle -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <h2 class="text-2xl font-bold flex items-center gap-3 text-slate-900 dark:text-white">
      <svg class="w-7 h-7 text-cyan-600 dark:text-cyan-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
        <polyline points="22 4 12 14.01 9 11.01"/>
      </svg>
      {t('workflows.guide.recipes_title')}
    </h2>

    <div class="flex items-center gap-2 p-1 rounded-lg bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
      <button
        id="wf-btn-v25"
        class="wf-version-btn px-3 py-1.5 rounded-md text-sm font-medium transition-all duration-200 bg-teal-500 text-white shadow-sm"
        data-version="v25"
      >
        <span class="flex items-center gap-1.5">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
          </svg>
          {t('commands.v25.tab_v25')}
        </span>
      </button>
      <button
        id="wf-btn-v24"
        class="wf-version-btn px-3 py-1.5 rounded-md text-sm font-medium transition-all duration-200 text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700"
        data-version="v24"
      >
        <span class="flex items-center gap-1.5">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          {t('commands.v25.tab_v24')}
        </span>
      </button>
    </div>
  </div>

  <!-- v2.5.0 Workflows -->
  <div id="wf-categories-v25" class="space-y-6">
    <!-- Version info banner -->
    <div class="flex items-start gap-3 p-4 rounded-lg bg-teal-500/10 border border-teal-500/30">
      <svg class="w-5 h-5 text-teal-600 dark:text-teal-400 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 16v-4"/>
        <path d="M12 8h.01"/>
      </svg>
      <div class="text-sm text-slate-700 dark:text-slate-300">
        <strong class="text-teal-600 dark:text-teal-400">v2.5.0+</strong> {t('workflows.v25.banner_intro')}
        <span class="text-slate-500 ml-1">{t('workflows.v25.banner_note')}</span>
      </div>
    </div>

    <!-- Migration Guide for v2.4 users -->
    <div class="bg-gradient-to-r from-amber-500/5 to-orange-500/5 rounded-xl border border-amber-200 dark:border-amber-500/20 overflow-hidden">
      <div class="p-4 border-b border-amber-200 dark:border-amber-500/20 bg-amber-500/10">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          <h4 class="font-bold text-amber-700 dark:text-amber-400">{t('workflows.v25.migration_title')}</h4>
        </div>
        <p class="text-xs text-amber-600 dark:text-amber-500 mt-1">{t('workflows.v25.migration_subtitle')}</p>
      </div>

      <div class="p-4 space-y-4">
        <!-- Command mapping table -->
        <div class="overflow-x-auto">
          <table class="w-full text-xs">
            <thead>
              <tr class="border-b border-slate-200 dark:border-slate-700">
                <th class="text-left py-2 px-3 font-semibold text-slate-600 dark:text-slate-400">{t('workflows.v25.table_old')}</th>
                <th class="text-left py-2 px-3 font-semibold text-slate-600 dark:text-slate-400">{t('workflows.v25.table_new')}</th>
                <th class="text-left py-2 px-3 font-semibold text-slate-600 dark:text-slate-400">{t('workflows.v25.table_notes')}</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
              <tr>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 font-mono text-red-600 dark:text-red-400 line-through">/code</code></td>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-teal-100 dark:bg-teal-900/30 font-mono text-teal-600 dark:text-teal-400">/cook</code></td>
                <td class="py-2 px-3 text-slate-500">Skill-based, supports flags</td>
              </tr>
              <tr>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 font-mono text-red-600 dark:text-red-400 line-through">/fix:types</code></td>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-teal-100 dark:bg-teal-900/30 font-mono text-teal-600 dark:text-teal-400">/fix</code></td>
                <td class="py-2 px-3 text-slate-500">Unified fix skill</td>
              </tr>
              <tr>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 font-mono text-red-600 dark:text-red-400 line-through">/design:screenshot</code></td>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-teal-100 dark:bg-teal-900/30 font-mono text-teal-600 dark:text-teal-400">/frontend-design</code></td>
                <td class="py-2 px-3 text-slate-500">Renamed skill</td>
              </tr>
              <tr>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 font-mono text-slate-600 dark:text-slate-400">/plan → /code</code></td>
                <td class="py-2 px-3"><code class="px-1.5 py-0.5 rounded bg-teal-100 dark:bg-teal-900/30 font-mono text-teal-600 dark:text-teal-400">/plan → /clear → /cook</code></td>
                <td class="py-2 px-3 text-amber-600 dark:text-amber-400 font-medium">/clear is mandatory!</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- /cook flags highlight -->
        <div class="bg-white dark:bg-slate-900/50 rounded-lg border border-slate-200 dark:border-slate-700 p-4">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-5 h-5 text-teal-600 dark:text-teal-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <span class="font-bold text-slate-900 dark:text-slate-100 text-sm">{t('workflows.v25.cook_flags_title')}</span>
            <span class="text-xs text-slate-500">{t('workflows.v25.cook_flags_desc')}</span>
          </div>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
            <div class="p-2 rounded bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700">
              <code class="text-xs font-mono text-purple-600 dark:text-purple-400 font-bold">--fast</code>
              <p class="text-[10px] text-slate-500 mt-1">{t('workflows.v25.flag_fast')}</p>
            </div>
            <div class="p-2 rounded bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700">
              <code class="text-xs font-mono text-blue-600 dark:text-blue-400 font-bold">--parallel</code>
              <p class="text-[10px] text-slate-500 mt-1">{t('workflows.v25.flag_parallel')}</p>
            </div>
            <div class="p-2 rounded bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700">
              <code class="text-xs font-mono text-green-600 dark:text-green-400 font-bold">--auto</code>
              <p class="text-[10px] text-slate-500 mt-1">{t('workflows.v25.flag_auto')}</p>
            </div>
            <div class="p-2 rounded bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700">
              <code class="text-xs font-mono text-orange-600 dark:text-orange-400 font-bold">--no-test</code>
              <p class="text-[10px] text-slate-500 mt-1">{t('workflows.v25.flag_notest')}</p>
            </div>
          </div>
        </div>

        <!-- Important note -->
        <div class="flex items-center gap-2 p-3 rounded-lg bg-red-500/10 border border-red-500/30">
          <svg class="w-4 h-4 text-red-600 dark:text-red-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 8v4"/>
            <path d="M12 16h.01"/>
          </svg>
          <span class="text-xs text-red-700 dark:text-red-400 font-medium">{t('workflows.v25.important_clear')}</span>
          <code class="text-xs px-1.5 py-0.5 rounded bg-red-100 dark:bg-red-900/30 font-mono text-red-600 dark:text-red-400">/plan → /clear → /cook</code>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6">
      {v25Workflows.map((workflow) => (
        <div class={`bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden ${workflow.hoverBorderColor} transition-all duration-200 hover:shadow-lg hover:-translate-y-1`}>
          <!-- Card Header -->
          <div class={`p-6 bg-gradient-to-r ${workflow.gradientHeader} border-b border-slate-100 dark:border-slate-800`}>
            <div class="flex items-start justify-between mb-4">
              <div>
                <div class="flex items-center gap-2 mb-2">
                  <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100">{workflow.title}</h3>
                  <span class={`px-2 py-0.5 text-xs rounded-full font-medium ${levelColors[workflow.level]}`}>{workflow.level}</span>
                </div>
                <p class="text-sm text-slate-500 dark:text-slate-400">{t('workflows.guide.best_for')} {workflow.bestFor}</p>
              </div>
              <div class={`flex items-center justify-center w-12 h-12 rounded-xl bg-white/50 dark:bg-slate-800/50 border border-white/50 dark:border-slate-700/50 flex-shrink-0 shadow-sm`}>
                <svg class={`w-6 h-6 ${workflow.iconColor}`} viewBox="0 0 24 24" fill="currentColor">
                  <Fragment set:html={workflow.icon} />
                </svg>
              </div>
            </div>
            <div class="flex items-center gap-4 text-xs font-medium text-slate-500 dark:text-slate-500">
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                {workflow.duration}
              </span>
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
                {workflow.stepCount} {t('workflows.guide.steps')}
              </span>
            </div>
          </div>

          <!-- Workflow Steps -->
          <div class="p-6 space-y-4">
            {workflow.steps.map((step, index) => (
              <>
                <div class="flex items-start gap-4">
                  <div class={`flex items-center justify-center w-8 h-8 rounded-full ${step.color} font-bold text-sm flex-shrink-0 shadow-sm`}>
                    {step.number}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1 flex-wrap">
                      {step.hasIcon ? (
                        <svg class="w-4 h-4 text-amber-500 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                          <circle cx="12" cy="12" r="3"/>
                        </svg>
                      ) : (
                        <code class="px-2 py-1 text-xs rounded bg-slate-100 dark:bg-slate-800 font-mono text-slate-700 dark:text-slate-200 border border-slate-200 dark:border-transparent">{step.command}</code>
                      )}
                      {step.isSkill && (
                        <span class="text-[9px] px-1.5 py-0.5 rounded bg-teal-100 dark:bg-teal-900/30 text-teal-600 dark:text-teal-400 font-medium uppercase">skill</span>
                      )}
                      <span class="text-xs font-medium text-slate-500 dark:text-slate-500">{step.typeLabel}</span>
                    </div>
                    <p class="text-sm text-slate-600 dark:text-slate-400 leading-snug">{step.description}</p>
                  </div>
                </div>
                {index < workflow.steps.length - 1 && (
                  <div class="flex justify-center">
                    <svg class="w-5 h-5 text-slate-300 dark:text-slate-700 flow-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style={`animation-delay: ${index * 0.3}s`}>
                      <line x1="12" y1="5" x2="12" y2="19"/>
                      <polyline points="19 12 12 19 5 12"/>
                    </svg>
                  </div>
                )}
              </>
            ))}

            {workflow.features && (
              <div class={`mt-4 p-4 rounded-lg bg-surface-50 dark:bg-slate-900 border border-slate-100 dark:border-slate-800`}>
                <div class={`text-xs font-bold mb-3 ${workflow.iconColor} uppercase tracking-wider`}>
                  {t('workflows.guide.auto_features').replace('{command}', workflow.steps[0].command)}
                </div>
                <ul class="space-y-2 text-xs text-slate-600 dark:text-slate-400">
                  {workflow.features.map((feature: string) => (
                    <li class="flex items-start gap-2">
                      <svg class="w-4 h-4 text-green-500 dark:text-green-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {workflow.cookMappings && (
              <div class="mt-4 p-4 rounded-lg bg-amber-500/5 border border-amber-200 dark:border-amber-500/20">
                <div class="flex items-center gap-2 mb-3">
                  <svg class="w-4 h-4 text-amber-600 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                  <span class="text-xs font-bold text-amber-700 dark:text-amber-400 uppercase tracking-wider">v2.4 → v2.5 Migration</span>
                </div>
                <div class="overflow-x-auto">
                  <table class="w-full text-xs">
                    <thead>
                      <tr class="border-b border-amber-200 dark:border-amber-500/20">
                        <th class="text-left py-1.5 px-2 font-semibold text-slate-600 dark:text-slate-400">v2.4.0</th>
                        <th class="text-left py-1.5 px-2 font-semibold text-slate-600 dark:text-slate-400">v2.5.0+</th>
                        <th class="text-left py-1.5 px-2 font-semibold text-slate-600 dark:text-slate-400 hidden sm:table-cell">Description</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-amber-100 dark:divide-amber-500/10">
                      {workflow.cookMappings.map((mapping: { old: string; new: string; desc: string }) => (
                        <tr>
                          <td class="py-1.5 px-2"><code class="px-1 py-0.5 rounded bg-red-100 dark:bg-red-900/30 font-mono text-red-600 dark:text-red-400 text-[10px] line-through">{mapping.old}</code></td>
                          <td class="py-1.5 px-2"><code class="px-1 py-0.5 rounded bg-teal-100 dark:bg-teal-900/30 font-mono text-teal-600 dark:text-teal-400 text-[10px]">{mapping.new}</code></td>
                          <td class="py-1.5 px-2 text-slate-500 hidden sm:table-cell">{mapping.desc}</td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
            )}

            {workflow.cookVariants && (
              <div class="mt-4 p-4 rounded-lg bg-blue-500/5 border border-blue-200 dark:border-blue-500/20">
                <div class="flex items-center gap-2 mb-3">
                  <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                  <span class="text-xs font-bold text-blue-700 dark:text-blue-400 uppercase tracking-wider">Command Variants</span>
                </div>
                <div class="overflow-x-auto">
                  <table class="w-full text-xs">
                    <thead>
                      <tr class="border-b border-blue-200 dark:border-blue-500/20">
                        <th class="text-left py-1.5 px-2 font-semibold text-slate-600 dark:text-slate-400">Command</th>
                        <th class="text-left py-1.5 px-2 font-semibold text-slate-600 dark:text-slate-400">Description</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-blue-100 dark:divide-blue-500/10">
                      {workflow.cookVariants.map((variant: { command: string; desc: string }) => (
                        <tr>
                          <td class="py-1.5 px-2"><code class="px-1 py-0.5 rounded bg-blue-100 dark:bg-blue-900/30 font-mono text-blue-600 dark:text-blue-400 text-[10px]">{variant.command}</code></td>
                          <td class="py-1.5 px-2 text-slate-500">{variant.desc}</td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
            )}
          </div>

          <!-- Card Footer -->
          <div class="px-6 py-4 bg-slate-50/80 dark:bg-slate-900/50 border-t border-slate-100 dark:border-slate-800 flex items-center">
            <div class="text-xs text-slate-500 dark:text-slate-500 flex-1">
              {workflow.tip}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- v2.4.0 Workflows -->
  <div id="wf-categories-v24" class="space-y-6 hidden">
    <!-- Version info banner -->
    <div class="flex items-start gap-3 p-4 rounded-lg bg-blue-500/10 border border-blue-500/30">
      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
      </svg>
      <div class="text-sm text-slate-700 dark:text-slate-300">
        <strong class="text-blue-600 dark:text-blue-400">{t('commands.v25.v24_label')}</strong> {t('workflows.v24.banner_intro')}
        <span class="text-slate-500 ml-1">{t('workflows.v24.banner_note')}</span>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6">
