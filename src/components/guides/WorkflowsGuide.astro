<script>
  // Version toggle functionality for workflows
  document.addEventListener('DOMContentLoaded', () => {
    const btnV25 = document.getElementById('wf-btn-v25');
    const btnV24 = document.getElementById('wf-btn-v24');
    const categoriesV25 = document.getElementById('wf-categories-v25');
    const categoriesV24 = document.getElementById('wf-categories-v24');

    if (!btnV25 || !btnV24 || !categoriesV25 || !categoriesV24) return;

    const activeClasses = 'bg-teal-500 text-white shadow-sm';
    const inactiveClasses = 'text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700';
    const activeV24Classes = 'bg-blue-500 text-white shadow-sm';

    function setVersion(version: 'v25' | 'v24') {
      if (version === 'v25') {
        categoriesV25.classList.remove('hidden');
        categoriesV24.classList.add('hidden');
        btnV25.className = `wf-version-btn px-3 py-1.5 rounded-md text-sm font-medium transition-all duration-200 ${activeClasses}`;
        btnV24.className = `wf-version-btn px-3 py-1.5 rounded-md text-sm font-medium transition-all duration-200 ${inactiveClasses}`;
      } else {
        categoriesV25.classList.add('hidden');
        categoriesV24.classList.remove('hidden');
        btnV24.className = `wf-version-btn px-3 py-1.5 rounded-md text-sm font-medium transition-all duration-200 ${activeV24Classes}`;
        btnV25.className = `wf-version-btn px-3 py-1.5 rounded-md text-sm font-medium transition-all duration-200 ${inactiveClasses}`;
      }

      // Save preference
      localStorage.setItem('workflows-version', version);
    }

    // Load saved preference
    const savedVersion = localStorage.getItem('workflows-version') as 'v25' | 'v24' | null;
    if (savedVersion) {
      setVersion(savedVersion);
    }

    btnV25.addEventListener('click', () => setVersion('v25'));
    btnV24.addEventListener('click', () => setVersion('v24'));
  });
</script>
