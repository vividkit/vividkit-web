---
import { workflows as workflowsEn } from '@/data/guides/workflows';
import { workflows as workflowsVi } from '@/data/vi/guides/workflows';
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const workflows = currentLang === 'vi' ? workflowsVi : workflowsEn;

const levelColors: Record<string, string> = {
  Beginner: 'bg-green-500/10 text-green-600 dark:text-green-400 border border-green-500/20',
  Intermediate: 'bg-amber-500/10 text-amber-600 dark:text-amber-400 border border-amber-500/20',
  Advanced: 'bg-red-500/10 text-red-600 dark:text-red-400 border border-red-500/20'
};
---

<style>
  @keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  .flow-arrow {
    animation: flow 2s ease-in-out infinite;
  }
</style>

<div class="space-y-8 mt-6">
  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      {t('workflows.guide.title')}
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t('workflows.guide.subtitle')}
    </p>
  </div>

  <!-- Info Banner -->
  <div class="flex items-start gap-4 p-6 rounded-xl bg-purple-500/5 dark:bg-purple-500/10 border border-purple-200 dark:border-purple-500/20">
    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-500/20 flex items-center justify-center">
      <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-1 1.5-2.4 1.5-3.8 0-3.3-2.7-6-6-6-3.3 0-6 2.7-6 6 0 1.4.5 2.8 1.5 3.8.8.8 1.3 1.5 1.5 2.5"/>
        <path d="M9 18h6"/>
        <path d="M10 22h4"/>
      </svg>
    </div>
    <div class="flex-1">
      <div class="font-bold text-purple-700 dark:text-purple-400 mb-1 text-lg">{t('workflows.guide.banner.title')}</div>
      <div class="text-slate-600 dark:text-slate-400 leading-relaxed">
        {t('workflows.guide.banner.description')}
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6">
    {workflows.map((workflow) => (
      <div class={`bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden ${workflow.hoverBorderColor} transition-all duration-200 hover:shadow-lg hover:-translate-y-1`}>
        <!-- Card Header -->
        <div class={`p-6 bg-gradient-to-r ${workflow.gradientHeader} border-b border-slate-100 dark:border-slate-800`}>
          <div class="flex items-start justify-between mb-4">
            <div>
              <div class="flex items-center gap-2 mb-2">
                <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100">{workflow.title}</h3>
                <span class={`px-2 py-0.5 text-xs rounded-full font-medium ${levelColors[workflow.level]}`}>{workflow.level}</span>
              </div>
              <p class="text-sm text-slate-500 dark:text-slate-400">{t('workflows.guide.best_for')} {workflow.bestFor}</p>
            </div>
            <div class={`flex items-center justify-center w-12 h-12 rounded-xl bg-white/50 dark:bg-slate-800/50 border border-white/50 dark:border-slate-700/50 flex-shrink-0 shadow-sm`}>
              <svg class={`w-6 h-6 ${workflow.iconColor}`} viewBox="0 0 24 24" fill="currentColor">
                <Fragment set:html={workflow.icon} />
              </svg>
            </div>
          </div>
          <div class="flex items-center gap-4 text-xs font-medium text-slate-500 dark:text-slate-500">
            <span class="flex items-center gap-1.5">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              {workflow.duration}
            </span>
            <span class="flex items-center gap-1.5">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              {workflow.stepCount} {t('workflows.guide.steps')}
            </span>
          </div>
        </div>

        <!-- Workflow Steps -->
        <div class="p-6 space-y-4">
          {workflow.steps.map((step, index) => (
            <>
              <div class="flex items-start gap-4">
                <div class={`flex items-center justify-center w-8 h-8 rounded-full ${step.color} font-bold text-sm flex-shrink-0 shadow-sm`}>
                  {step.number}
                </div>
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-1">
                    {step.hasIcon ? (
                      <svg class="w-4 h-4 text-amber-500 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                        <circle cx="12" cy="12" r="3"/>
                      </svg>
                    ) : (
                      <code class="px-2 py-1 text-xs rounded bg-slate-100 dark:bg-slate-800 font-mono text-slate-700 dark:text-slate-200 border border-slate-200 dark:border-transparent">{step.command}</code>
                    )}
                    <span class="text-xs font-medium text-slate-500 dark:text-slate-500">{step.typeLabel}</span>
                  </div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 leading-snug">{step.description}</p>
                </div>
              </div>
              {index < workflow.steps.length - 1 && (
                <div class="flex justify-center">
                  <svg class="w-5 h-5 text-slate-300 dark:text-slate-700 flow-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style={`animation-delay: ${index * 0.3}s`}>
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <polyline points="19 12 12 19 5 12"/>
                  </svg>
                </div>
              )}
            </>
          ))}

          {workflow.features && (
            <div class={`mt-4 p-4 rounded-lg bg-surface-50 dark:bg-slate-900 border border-slate-100 dark:border-slate-800`}>
              <div class={`text-xs font-bold mb-3 ${workflow.iconColor} uppercase tracking-wider`}>
                {t('workflows.guide.auto_features').replace('{command}', workflow.steps[0].command)}
              </div>
              <ul class="space-y-2 text-xs text-slate-600 dark:text-slate-400">
                {workflow.features.map((feature: string) => (
                  <li class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-green-500 dark:text-green-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>

        <!-- Card Footer -->
        <div class="px-6 py-4 bg-slate-50/80 dark:bg-slate-900/50 border-t border-slate-100 dark:border-slate-800 flex items-center">
          <div class="text-xs text-slate-500 dark:text-slate-500 flex-1">
            {workflow.tip}
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Additional Tips Section -->
  <div class="glass-card rounded-2xl p-8 border border-slate-200 dark:border-slate-800">
    <div class="flex items-center gap-4 mb-6">
      <div class="flex-shrink-0 p-3 bg-blue-100 dark:bg-blue-900/30 rounded-xl text-blue-600 dark:text-blue-400">
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold">{t('workflows.guide.pro_tips.title')}</h3>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-blue-500 dark:text-blue-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('commands.tip1.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('commands.tip1.description').replace('/clear', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/clear</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-purple-500 dark:text-purple-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('commands.tip2.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('commands.tip2.description').replace('@plan.md', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">@plan.md</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-green-500 dark:text-green-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('commands.tip3.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('commands.tip3.description').replace('/git:cm', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/git:cm</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-amber-500 dark:text-amber-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('commands.tip4.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('commands.tip4.description').replace('/ask', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/ask</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-cyan-500 dark:text-cyan-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('workflows.tip.scout.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('workflows.tip.scout.desc').replace('`/scout`', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/scout</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-red-500 dark:text-red-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('workflows.tip.debug.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('workflows.tip.debug.desc').replace('`/debug`', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/debug</code>').replace('`/fix`', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/fix</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-indigo-500 dark:text-indigo-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('workflows.tip.help.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('workflows.tip.help.desc').replace('`/ck-help`', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/ck-help</code>')} /></div>
        </div>
      </div>
      <div class="flex items-start gap-3 p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700">
        <svg class="w-6 h-6 text-pink-500 dark:text-pink-400 mt-0.5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <div>
          <div class="text-sm font-medium text-slate-900 dark:text-slate-200 mb-1">{t('workflows.tip.plan.title')}</div>
          <div class="text-xs text-slate-600 dark:text-slate-400"><Fragment set:html={t('workflows.tip.plan.desc').replace('`/code`', '<code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 font-mono">/code</code>')} /></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Common Commands Reference -->
  <div class="mt-6 p-8 rounded-2xl bg-white dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 shadow-sm">
    <h3 class="text-xl font-bold mb-6 text-slate-900 dark:text-slate-100">{t('workflows.common.title')}</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-purple-300 dark:hover:border-purple-500/30 transition-colors">
        <code class="text-sm text-purple-600 dark:text-purple-400 font-mono font-bold">/brainstorm</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.brainstorm')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-blue-300 dark:hover:border-blue-500/30 transition-colors">
        <code class="text-sm text-blue-600 dark:text-blue-400 font-mono font-bold">/plan</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.plan')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-green-300 dark:hover:border-green-500/30 transition-colors">
        <code class="text-sm text-green-600 dark:text-green-400 font-mono font-bold">/cook</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.cook')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-amber-300 dark:hover:border-amber-500/30 transition-colors">
        <code class="text-sm text-amber-600 dark:text-amber-400 font-mono font-bold">/code</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.code')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-red-300 dark:hover:border-red-500/30 transition-colors">
        <code class="text-sm text-red-600 dark:text-red-400 font-mono font-bold">/fix</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.fix')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-cyan-300 dark:hover:border-cyan-500/30 transition-colors">
        <code class="text-sm text-cyan-600 dark:text-cyan-400 font-mono font-bold">/test</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.test')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-orange-300 dark:hover:border-orange-500/30 transition-colors">
        <code class="text-sm text-orange-600 dark:text-orange-400 font-mono font-bold">/debug</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.debug')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-pink-300 dark:hover:border-pink-500/30 transition-colors">
        <code class="text-sm text-pink-600 dark:text-pink-400 font-mono font-bold">/ask</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.ask')}</p>
      </div>
      <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 hover:border-slate-300 dark:hover:border-slate-600 transition-colors">
        <code class="text-sm text-slate-600 dark:text-slate-400 font-mono font-bold">/clear</code>
        <p class="text-xs text-slate-600 dark:text-slate-400 mt-2 font-medium">{t('workflows.cmd.clear')}</p>
      </div>
    </div>
  </div>

  <div class="text-center pt-8">
    <p class="text-slate-600 dark:text-slate-400 text-sm">
      {t('workflows.more.text')} <a href="https://docs.claudekit.cc/docs/workflows" target="_blank" class="text-blue-600 dark:text-blue-400 hover:underline font-medium">{t('workflows.more.link')}</a>.
    </p>
  </div>
</div>