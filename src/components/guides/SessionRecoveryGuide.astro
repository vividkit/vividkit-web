---
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';
import PlatformPathSwitcher from './PlatformPathSwitcher.astro';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

// Code examples
const findSessionId = `# Find your session ID from history
cat <span class="text-slate-900 dark:text-slate-100 font-semibold" data-macos="~/.claude/history.jsonl" data-linux="~/.claude/history.jsonl" data-windows="%USERPROFILE%\\.claude\\history.jsonl">~/.claude/history.jsonl</span> | tail -5

# Look for sessionId in the JSON object
# Example output:
{"display":"/clear","timestamp":1765163522956,"project":"...","sessionId":"74f292c0-49fa-41c0-a2d8-dd2c3ef9c4be"}

# Sessions are stored per-project in:
# <span class="text-slate-900 dark:text-slate-100 font-semibold" data-macos="~/.claude/projects/{project-path-encoded}/{session-id}.jsonl" data-linux="~/.claude/projects/{project-path-encoded}/{session-id}.jsonl" data-windows="%USERPROFILE%\\.claude\\projects\\{project-path-encoded}\\{session-id}.jsonl">~/.claude/projects/{project-path-encoded}/{session-id}.jsonl</span>`;

const resumeOptions = [
  {
    title: "Option 1: Interactive resume",
    desc: "Shows recent sessions list to pick from",
    cmd: `> <span class="text-purple-600 dark:text-purple-400 font-bold">/resume</span>`
  },
  {
    title: "Option 2: Specific session ID",
    desc: "Resume with specific session ID",
    cmd: `> <span class="text-purple-600 dark:text-purple-400 font-bold">/resume</span> 74f292c0-49fa-41c0-a2d8-dd2c3ef9c4be`
  },
  {
    title: "Option 3: Command line",
    desc: "Resume directly when starting CCS",
    cmd: `<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> glm <span class="text-purple-600 dark:text-purple-400 font-bold">--resume</span>
<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> agy <span class="text-purple-600 dark:text-purple-400 font-bold">--resume</span> 74f292c0-49fa-41c0-a2d8-dd2c3ef9c4be`
  }
];

const exportSteps = [
  {
    title: "Step 1: Export",
    cmd: `<span class="text-purple-600 dark:text-purple-400 font-bold">/export</span>                    <span class="text-slate-400 italic"># Creates conversation.txt in current dir</span>
<span class="text-purple-600 dark:text-purple-400 font-bold">/export</span> ~/backup/session   <span class="text-slate-400 italic"># Custom path</span>`,
    desc: "Export current conversation to a text file"
  },
  {
    title: "Step 2: Start Fresh",
    cmd: `<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> glm`,
    desc: "Start a new session with a cheaper provider"
  },
  {
    title: "Step 3: Paste Context",
    cmd: `> "Here's my previous context: [paste key parts of export]"
> "Continue implementing the auth handler"`,
    desc: "Manually transfer the essential context"
  }
];

const exportUseCases = [
  {
    title: "Context Bloated",
    desc: "Session > 100K tokens, /resume just moves the problem",
    icon: "warning"
  },
  {
    title: "Fresh Start",
    desc: "Keep only essential context, discard noise",
    icon: "refresh"
  },
  {
    title: "Share Externally",
    desc: "Teammates, documentation, backup",
    icon: "share"
  }
];

const fallbackSteps = [
  {
    title: "Setup",
    desc: "Multiple terminals ready",
    cmd: `<span class="text-slate-400 italic"># Terminal 1:</span> <span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> work     <span class="text-slate-400 italic">(Claude - primary)</span>
<span class="text-slate-400 italic"># Terminal 2:</span> <span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> agy      <span class="text-slate-400 italic">(Antigravity - backup)</span>
<span class="text-slate-400 italic"># Terminal 3:</span> <span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> glm      <span class="text-slate-400 italic">(GLM - cost-optimized)</span>`
  },
  {
    title: "Decision Logic",
    desc: "When Claude hits limit:",
    cmd: `<span class="text-slate-400 italic"># Context healthy? →</span> <span class="text-purple-600 dark:text-purple-400 font-bold">/resume</span> <span class="text-slate-400 italic">in another terminal</span>
<span class="text-slate-400 italic"># Context bloated? →</span> <span class="text-purple-600 dark:text-purple-400 font-bold">/export</span><span class="text-slate-400 italic">, then fresh session</span>`
  },
  {
    title: "Quick Switch",
    desc: "Resume with full context",
    cmd: `<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> glm <span class="text-purple-600 dark:text-purple-400 font-bold">--resume</span>`
  }
];



const proTips = [
  {
    title: t('session_recovery.guide.protips.rename_title'),
    desc: t('session_recovery.guide.protips.rename_desc'),
    cmd: `<span class="text-slate-400 italic">${t('session_recovery.guide.protips.rename_cmd_1')}</span>
<span class="text-purple-600 dark:text-purple-400 font-bold">/rename</span> auth-feature

<span class="text-slate-400 italic">${t('session_recovery.guide.protips.rename_cmd_2')}</span>
<span class="text-purple-600 dark:text-purple-400 font-bold">/resume</span> auth-feature <span class="text-slate-400 italic">${t('session_recovery.guide.protips.rename_cmd_3')}</span>
<span class="text-purple-600 dark:text-purple-400 font-bold">/resume</span> 74f292c0...  <span class="text-slate-400 italic">${t('session_recovery.guide.protips.rename_cmd_4')}</span>

<span class="text-slate-400 italic">${t('session_recovery.guide.protips.rename_cmd_5')}</span>
<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> <span class="text-slate-400 italic">glm/agy</span> <span class="text-purple-600 dark:text-purple-400 font-bold">"/resume auth-feature"</span>`,
    icon: "tag"
  },
  {
    title: t('session_recovery.guide.protips.continue_title'),
    desc: t('session_recovery.guide.protips.continue_desc'),
    cmd: `<span class="text-slate-400 italic">${t('session_recovery.guide.protips.continue_cmd_1')}</span>
<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> <span class="text-slate-400 italic">glm/agy/work</span> <span class="text-purple-600 dark:text-purple-400 font-bold">--continue</span> continue

<span class="text-slate-400 italic">${t('session_recovery.guide.protips.continue_cmd_2')}</span>`,
    icon: "lightning"
  },
  {
    title: t('session_recovery.guide.protips.login_title'),
    desc: t('session_recovery.guide.protips.login_desc'),
    cmd: `<span class="text-slate-400 italic">${t('session_recovery.guide.protips.login_cmd_1')}</span>
<span class="text-purple-600 dark:text-purple-400 font-bold">/login</span>

<span class="text-slate-400 italic">${t('session_recovery.guide.protips.login_cmd_2')}</span>
<span class="text-slate-400 italic">${t('session_recovery.guide.protips.login_cmd_3')}</span>
<span class="text-emerald-600 dark:text-emerald-400 font-bold">continue</span>`,
    icon: "switch"
  }
];

const emergencySteps = [
  {
    step: 1,
    title: t('session_recovery.guide.emergency.step1.title'),
    desc: t('session_recovery.guide.emergency.step1.desc'),
    color: "text-slate-600 dark:text-slate-400"
  },
  {
    step: 2,
    title: t('session_recovery.guide.emergency.step2.title'),
    desc: t('session_recovery.guide.emergency.step2.desc'),
    color: "text-amber-600 dark:text-amber-400"
  },
  {
    step: 3,
    title: t('session_recovery.guide.emergency.step3.title'),
    desc: t('session_recovery.guide.emergency.step3.desc'),
    cmd: `<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> glm <span class="text-purple-600 dark:text-purple-400 font-bold">--resume</span>
<span class="text-slate-400 italic">${t('session_recovery.guide.emergency.step3.cmd_note')}</span> <span class="text-purple-600 dark:text-purple-400 font-bold">/resume</span>`,
    color: "text-emerald-600 dark:text-emerald-400"
  },
  {
    step: 4,
    title: t('session_recovery.guide.emergency.step4.title'),
    desc: t('session_recovery.guide.emergency.step4.desc'),
    cmd: `<span class="text-purple-600 dark:text-purple-400 font-bold">/export</span> ~/backup/session.txt
<span class="text-blue-600 dark:text-blue-400 font-bold">ccs</span> glm
> ${t('session_recovery.guide.emergency.step4.cmd_input')}`,
    color: "text-blue-600 dark:text-blue-400"
  },
  {
    step: 5,
    title: t('session_recovery.guide.emergency.step5.title'),
    desc: t('session_recovery.guide.emergency.step5.desc'),
    color: "text-fuchsia-600 dark:text-fuchsia-400"
  }
];
---

<style>
  @keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  .flow-arrow {
    animation: flow 2s ease-in-out infinite;
  }
</style>

<div class="space-y-8 mt-6">
  <!-- Hero Section -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      {t('session_recovery.guide.title')}
    </h2>
    <p class="text-xl font-medium text-fuchsia-600 dark:text-fuchsia-400">
      {t('session_recovery.guide.tagline')}
    </p>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t('session_recovery.guide.description')}
    </p>
  </div>



  <!-- Section 1: Understanding Sessions -->
  <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-slate-500/10 to-slate-600/10 border-b border-slate-100 dark:border-slate-800">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-slate-500/20 text-slate-600 dark:text-slate-400 font-bold text-sm">1</div>
        <h4 class="text-lg font-bold text-slate-900 dark:text-slate-100">{t('session_recovery.guide.understand.title')}</h4>
      </div>
    </div>
    <div class="p-6 space-y-4">
      <p class="text-slate-600 dark:text-slate-400">
        {t('session_recovery.guide.understand.desc')}
      </p>

      <PlatformPathSwitcher
        lang={currentLang}
        pathAfterHome=".claude/history.jsonl"
        label={t('session_recovery.guide.understand.file_label') || 'File path:'}
        id="session-history-path"
        color="slate"
      />

      <div class="bg-slate-50 dark:bg-[#0D0D0D] rounded-lg p-4 font-mono text-sm overflow-x-auto">
        <pre class="text-slate-700 dark:text-slate-300 whitespace-pre-wrap" set:html={findSessionId}></pre>
      </div>

      <!-- Important Warning -->
      <div class="flex items-start gap-3 p-4 rounded-lg bg-amber-50 dark:bg-amber-500/10 border border-amber-200 dark:border-amber-500/30">
        <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
          <line x1="12" y1="9" x2="12" y2="13"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        <div>
          <div class="font-medium text-amber-700 dark:text-amber-400">{t('session_recovery.guide.understand.warning_title')}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mt-1">{t('session_recovery.guide.understand.warning_desc')}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Section 2: CLIProxy Limitation -->
  <div class="bg-white dark:bg-slate-900/50 rounded-xl border-2 border-red-200 dark:border-red-500/30 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-red-500/10 to-orange-500/10 border-b border-red-200 dark:border-slate-800">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-red-500/20 text-red-600 dark:text-red-400 font-bold text-sm">2</div>
        <h4 class="text-lg font-bold text-slate-900 dark:text-slate-100">{t('session_recovery.guide.cliproxy.title')}</h4>
        <span class="px-2 py-0.5 text-xs font-semibold bg-red-100 dark:bg-red-500/20 text-red-700 dark:text-red-400 rounded-full">
          {t('session_recovery.guide.cliproxy.badge')}
        </span>
      </div>
    </div>
    <div class="p-6 space-y-4">
      <p class="text-slate-600 dark:text-slate-400">
        {t('session_recovery.guide.cliproxy.desc')}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Works -->
        <div class="p-4 rounded-lg bg-emerald-50 dark:bg-emerald-500/10 border border-emerald-200 dark:border-emerald-500/30">
          <div class="font-bold text-emerald-700 dark:text-emerald-400 text-sm mb-2">{t('session_recovery.guide.cliproxy.works_title')}</div>
          <ul class="text-xs text-slate-600 dark:text-slate-400 space-y-1">
            {t('session_recovery.guide.cliproxy.works_items').split('|').map((item: string) => (
              <li class="flex items-start gap-2">
                <span class="text-emerald-500 mt-0.5">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Fails -->
        <div class="p-4 rounded-lg bg-red-50 dark:bg-red-500/10 border border-red-200 dark:border-red-500/30">
          <div class="font-bold text-red-700 dark:text-red-400 text-sm mb-2">{t('session_recovery.guide.cliproxy.fails_title')}</div>
          <ul class="text-xs text-slate-600 dark:text-slate-400 space-y-1">
            {t('session_recovery.guide.cliproxy.fails_items').split('|').map((item: string) => (
              <li class="flex items-start gap-2">
                <span class="text-red-500 mt-0.5">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Why -->
      <div class="flex items-start gap-3 p-4 rounded-lg bg-amber-50 dark:bg-amber-500/10 border border-amber-200 dark:border-amber-500/30">
        <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="16" x2="12" y2="12"/>
          <line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <div>
          <div class="font-medium text-amber-700 dark:text-amber-400">{t('session_recovery.guide.cliproxy.reason_title')}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mt-1">{t('session_recovery.guide.cliproxy.reason_desc')}</div>
        </div>
      </div>

      <!-- Workaround -->
      <div class="flex items-start gap-3 p-4 rounded-lg bg-blue-50 dark:bg-blue-500/10 border border-blue-200 dark:border-blue-500/30">
        <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
        </svg>
        <div>
          <div class="font-medium text-blue-700 dark:text-blue-400">{t('session_recovery.guide.cliproxy.workaround_title')}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mt-1" set:html={t('session_recovery.guide.cliproxy.workaround_desc')}></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Section 3: Resume Sessions -->
  <div class="bg-white dark:bg-slate-900/50 rounded-xl border-2 border-fuchsia-200 dark:border-fuchsia-500/30 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-fuchsia-500/10 to-pink-500/10 border-b border-fuchsia-200 dark:border-slate-800">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-fuchsia-500/20 text-fuchsia-600 dark:text-fuchsia-400 font-bold text-sm">3</div>
        <h4 class="text-lg font-bold text-slate-900 dark:text-slate-100">{t('session_recovery.guide.same_provider.title')}</h4>
      </div>
    </div>
    <div class="p-6 space-y-6">
      <p class="text-slate-600 dark:text-slate-400">
        {t('session_recovery.guide.same_provider.desc')}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {resumeOptions.map((opt) => (
          <div class="flex flex-col h-full bg-slate-50 dark:bg-slate-800/50 rounded-lg border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="p-3 border-b border-slate-100 dark:border-slate-700 bg-white dark:bg-slate-800">
              <div class="font-bold text-slate-700 dark:text-slate-200 text-sm">{opt.title}</div>
              <div class="text-xs text-slate-500 dark:text-slate-400 mt-0.5">{opt.desc}</div>
            </div>
            <div class="p-3 bg-slate-50 dark:bg-[#0D0D0D] flex-1 flex items-center">
              <pre class="text-slate-700 dark:text-slate-300 font-mono text-xs whitespace-pre-wrap break-all" set:html={opt.cmd}></pre>
            </div>
          </div>
        ))}
      </div>

      <div class="flex items-start gap-3 p-4 rounded-lg bg-emerald-50 dark:bg-emerald-500/10 border border-emerald-200 dark:border-emerald-500/30">
        <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
          <polyline points="22 4 12 14.01 9 11.01"/>
        </svg>
        <div>
          <div class="font-medium text-emerald-700 dark:text-emerald-400">{t('session_recovery.guide.same_provider.result')}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">{t('session_recovery.guide.same_provider.result_desc')}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Section 4: Export Context -->
  <div class="bg-white dark:bg-slate-900/50 rounded-xl border-2 border-amber-200 dark:border-amber-500/30 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-amber-500/10 to-orange-500/10 border-b border-amber-200 dark:border-slate-800">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-amber-500/20 text-amber-600 dark:text-amber-400 font-bold text-sm">4</div>
        <h4 class="text-lg font-bold text-slate-900 dark:text-slate-100">{t('session_recovery.guide.export.title')}</h4>
        <span class="px-2 py-0.5 text-xs font-semibold bg-amber-100 dark:bg-amber-500/20 text-amber-700 dark:text-amber-400 rounded-full">
          {t('session_recovery.guide.export.badge')}
        </span>
      </div>
    </div>
    <div class="p-6 space-y-6">
      <p class="text-slate-600 dark:text-slate-400">
        {t('session_recovery.guide.export.desc')}
      </p>

      <!-- When to use /export -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {exportUseCases.map((useCase) => (
          <div class="p-4 rounded-lg bg-amber-50 dark:bg-amber-500/10 border border-amber-200 dark:border-amber-500/30">
            <div class="font-bold text-amber-700 dark:text-amber-400 text-sm mb-1">{useCase.title}</div>
            <div class="text-xs text-slate-600 dark:text-slate-400">{useCase.desc}</div>
          </div>
        ))}
      </div>

      <div class="space-y-4">
        {exportSteps.map((step) => (
          <div class="relative pl-8">
            <div class="absolute left-0 top-0 bottom-0 w-px bg-slate-200 dark:bg-slate-800"></div>
            <div class="absolute left-[-4px] top-2 w-2 h-2 rounded-full bg-amber-400 border border-white dark:border-slate-900"></div>

            <div class="mb-1">
              <span class="font-bold text-slate-900 dark:text-slate-100 text-sm">{step.title}</span>
              <span class="text-slate-500 dark:text-slate-500 text-xs ml-2">— {step.desc}</span>
            </div>
            <div class="bg-slate-50 dark:bg-slate-800/50 rounded-lg p-3 border border-slate-100 dark:border-slate-700 font-mono text-sm text-slate-700 dark:text-slate-300 whitespace-pre-wrap" set:html={step.cmd}>
            </div>
          </div>
        ))}
      </div>

      <!-- Decision guide -->
      <div class="flex items-start gap-3 p-4 rounded-lg bg-blue-50 dark:bg-blue-500/10 border border-blue-200 dark:border-blue-500/30">
        <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="16" x2="12" y2="12"/>
          <line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <div>
          <div class="font-medium text-blue-700 dark:text-blue-400">{t('session_recovery.guide.export.decision_title')}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mt-1" set:html={t('session_recovery.guide.export.decision_desc')}></div>
        </div>
      </div>
    </div>
  </div>



  <!-- Section 5: Model Fallback Strategies -->
  <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-violet-500/10 to-purple-500/10 border-b border-slate-100 dark:border-slate-800">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-violet-500/20 text-violet-600 dark:text-violet-400 font-bold text-sm">5</div>
        <h4 class="text-lg font-bold text-slate-900 dark:text-slate-100">{t('session_recovery.guide.fallback.title')}</h4>
      </div>
    </div>
    <div class="p-6 space-y-4">
