---
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<style>
  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }
  .cursor-blink {
    animation: blink 1s infinite;
  }
</style>

<div class="space-y-8 mt-6">

  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      {t('cli.guide.title')}
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed" set:html={t('cli.guide.subtitle')}>
    </p>
  </div>

  <!-- Hero Banner -->
  <!-- Hero Banner -->
  <div class="flex items-start gap-4 p-6 rounded-xl bg-purple-500/5 dark:bg-purple-500/10 border border-purple-200 dark:border-purple-500/20">
    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-500/20 flex items-center justify-center">
      <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-1 1.5-2.4 1.5-3.8 0-3.3-2.7-6-6-6-3.3 0-6 2.7-6 6 0 1.4.5 2.8 1.5 3.8.8.8 1.3 1.5 1.5 2.5"/>
        <path d="M9 18h6"/>
        <path d="M10 22h4"/>
      </svg>
    </div>
    <div class="flex-1">
      <div class="font-bold text-purple-700 dark:text-purple-400 mb-1 text-lg">{t('cli.guide.what_is')}</div>
      <div class="text-slate-600 dark:text-slate-400 leading-relaxed" set:html={t('cli.guide.what_is_description')}>
      </div>
      <div class="mt-4 p-4 rounded-lg bg-white/50 dark:bg-slate-900/50 border border-purple-100 dark:border-purple-500/10">
        <p class="text-xs font-bold text-purple-700 dark:text-purple-400 mb-2 uppercase tracking-wide">{t('cli.guide.quick_workflow')}</p>
        <div class="bg-slate-50 dark:bg-[#0D0D0D] rounded-lg p-3 font-mono text-sm space-y-1 border border-slate-200 dark:border-transparent">
          <div class="flex items-start gap-2">
            <span class="text-purple-600 dark:text-purple-400">$</span>
            <span class="text-slate-700 dark:text-slate-300">ck init</span>
            <span class="text-slate-500 text-xs">{t('cli.terminal.setup_comment')}</span>
          </div>
          <div class="flex items-start gap-2">
            <span class="text-purple-600 dark:text-purple-400">$</span>
            <span class="text-slate-700 dark:text-slate-300">claude</span>
            <span class="text-slate-500 text-xs">{t('cli.terminal.start_comment')}</span>
          </div>
        </div>
        <p class="text-xs text-slate-500 dark:text-slate-500 mt-2">{t('cli.terminal.then_chat')}</p>
      </div>
    </div>
  </div>

  <!-- Terminal Mockup Section -->
  <div class="glass-card rounded-2xl overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-cyan-500/10 to-blue-500/10 border-b border-slate-200 dark:border-slate-800">
      <h2 id="demo-preview" class="text-2xl font-bold font-sans text-cyan-600 dark:text-cyan-400 flex items-center gap-3">
        <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2"/>
          <polyline points="8 7 12 12 8 17"/>
          <line x1="12" y1="17" x2="16" y2="17"/>
        </svg>
        {t('cli.guide.terminal_preview')}
      </h2>
      <p class="text-sm text-slate-500 dark:text-slate-400 mt-2">{t('cli.guide.terminal_description')}</p>
    </div>

    <div class="p-8">
      <!-- Terminal Window -->
      <div class="bg-slate-50 dark:bg-[#0D0D0D] rounded-xl border-2 border-slate-200 dark:border-slate-700 overflow-hidden shadow-2xl">
        <!-- Terminal Header -->
        <div class="bg-slate-200 dark:bg-slate-800 px-4 py-2 flex items-center gap-2 border-b border-slate-300 dark:border-slate-700">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
          </div>
          <div class="flex-1 text-center">
            <span class="text-xs text-slate-500 dark:text-slate-400 font-mono">{t('cli.terminal.window_title')}</span>
          </div>
        </div>

        <!-- Terminal Content -->
        <div class="p-6 font-mono text-sm space-y-3 min-h-[600px] text-slate-700 dark:text-slate-300">

          <!-- Command 1: Start Claude Code -->
          <div class="space-y-2">
            <div class="flex items-start gap-2">
              <span class="text-emerald-600 dark:text-emerald-400">âžœ</span>
              <span class="text-cyan-600 dark:text-cyan-400">~/projects</span>
              <span class="text-slate-800 dark:text-slate-300">claude</span>
            </div>

            <!-- CLI starts -->
            <div class="pl-4 text-cyan-600 dark:text-cyan-400 text-xs">
              <div>{t('cli.terminal.starting')}</div>
              <div class="text-slate-500 mt-1">{t('cli.terminal.type_message')}</div>
            </div>

            <!-- User prompt -->
            <div class="pl-4 mt-2">
              <div class="flex items-start gap-2">
                <span class="text-emerald-600 dark:text-emerald-400">You:</span>
                <span class="text-slate-800 dark:text-slate-300">{t('cli.terminal.user_prompt_1')}</span>
              </div>
            </div>

            <!-- AI response -->
            <div class="pl-4 space-y-2 text-slate-600 dark:text-slate-400">
              <div class="flex items-center gap-2 text-cyan-600 dark:text-cyan-400">
                <svg class="w-4 h-4 animate-pulse" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                </svg>
                <span>{t('cli.terminal.thinking')}</span>
              </div>

              <div class="space-y-1 pl-6 text-xs">
                <div class="flex items-center gap-2">
                  <span class="text-emerald-600 dark:text-emerald-400">âœ“</span>
                  <span>{t('cli.terminal.search_domain')} <span class="text-slate-700 dark:text-slate-300">{t('cli.terminal.domain_beauty')}</span></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-emerald-600 dark:text-emerald-400">âœ“</span>
                  <span>{t('cli.terminal.style_guide')} <span class="text-slate-700 dark:text-slate-300">{t('cli.terminal.style_minimal')}</span></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-emerald-600 dark:text-emerald-400">âœ“</span>
                  <span>{t('cli.terminal.typography')} <span class="text-slate-700 dark:text-slate-300">Playfair Display + Inter</span></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-emerald-600 dark:text-emerald-400">âœ“</span>
                  <span>{t('cli.terminal.color_palette')} <span class="text-slate-700 dark:text-slate-300">{t('cli.terminal.color_pastel')}</span></span>
                </div>
              </div>

              <div class="mt-3 p-3 bg-white dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded">
                <div class="text-emerald-600 dark:text-emerald-400 text-sm mb-2">{t('cli.terminal.design_complete')}</div>
                <div class="text-slate-700 dark:text-slate-300 text-xs space-y-1">
                  <div>{t('cli.terminal.created_file')} <span class="text-cyan-600 dark:text-cyan-400">yoga-studio-landing.html</span></div>
                  <div>{t('cli.terminal.palette_desc')}</div>
                  <div>{t('cli.terminal.typography_desc')}</div>
                  <div>{t('cli.terminal.mobile_desc')}</div>
                  <div>{t('cli.terminal.a11y_desc')}</div>
                </div>
              </div>

              <div class="flex items-center gap-2 text-amber-600 dark:text-amber-400 text-xs mt-2">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span>{t('cli.terminal.files_created')}</span>
              </div>
            </div>
          </div>

          <!-- Separator -->
          <div class="border-t border-slate-200 dark:border-slate-800 my-4"></div>

          <!-- Command 2: Check what was created -->
          <div class="space-y-2">
            <div class="flex items-start gap-2">
              <span class="text-emerald-600 dark:text-emerald-400">âžœ</span>
              <span class="text-cyan-600 dark:text-cyan-400">~/projects</span>
              <span class="text-slate-700 dark:text-slate-300">ls -la</span>
            </div>
            <div class="pl-4 text-slate-600 dark:text-slate-400 text-xs space-y-1">
              <div>drwxr-xr-x  5 user  staff   160 Dec  3 15:20 .</div>
              <div>drwxr-xr-x 12 user  staff   384 Dec  3 15:15 ..</div>
              <div class="text-emerald-600 dark:text-emerald-400">-rw-r--r--  1 user  staff  8420 Dec  3 15:20 yoga-studio-landing.html</div>
            </div>
          </div>

          <!-- Separator -->
          <div class="border-t border-slate-200 dark:border-slate-800 my-4"></div>

          <!-- Command 3: Open in browser -->
          <div class="space-y-2">
            <div class="flex items-start gap-2">
              <span class="text-emerald-600 dark:text-emerald-400">âžœ</span>
              <span class="text-cyan-600 dark:text-cyan-400">~/projects</span>
              <span class="text-slate-700 dark:text-slate-300">open yoga-studio-landing.html</span>
            </div>
            <div class="pl-4 text-slate-600 dark:text-slate-400 text-xs">
              <div class="flex items-center gap-2 text-emerald-600 dark:text-emerald-400">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                <span>{t('cli.terminal.opening')}</span>
              </div>
            </div>
          </div>

          <!-- Separator -->
          <div class="border-t border-slate-200 dark:border-slate-800 my-4"></div>

          <!-- Command 4: Continue in same session -->
          <div class="space-y-2">
            <div class="pl-4 space-y-2 text-slate-600 dark:text-slate-400">
              <div class="text-purple-600 dark:text-purple-400 text-xs">{t('cli.terminal.already_in')}</div>

              <div class="mt-2 space-y-3">
                <div>
                  <div class="flex gap-2 items-center mb-1">
                    <span class="text-emerald-600 dark:text-emerald-400 text-xs">You:</span>
                  </div>
                  <div class="pl-4 text-slate-700 dark:text-slate-300 text-xs">
                    {t('cli.terminal.user_prompt_2')}
                  </div>
                </div>

                <div>
                  <div class="flex gap-2 items-center mb-1">
                    <svg class="w-3 h-3 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    <span class="text-purple-600 dark:text-purple-400 text-xs">AI:</span>
                  </div>
                  <div class="pl-4 text-slate-700 dark:text-slate-300 text-xs space-y-1">
                    <div>{t('cli.terminal.ai_response_2')}</div>
                    <div class="pl-2">
                      <div>{t('cli.terminal.hover_transition')}</div>
                      <div>{t('cli.terminal.hover_scale')}</div>
                      <div>{t('cli.terminal.hover_shadow')}</div>
                      <div>{t('cli.terminal.cursor_pointer')}</div>
                    </div>
                    <div class="mt-2 text-emerald-600 dark:text-emerald-400">{t('cli.terminal.updated_file')}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Current prompt -->
          <div class="flex items-start gap-2 pt-4">
            <span class="text-emerald-600 dark:text-emerald-400">âžœ</span>
            <span class="text-cyan-600 dark:text-cyan-400">~/projects</span>
            <span class="text-slate-800 dark:text-slate-300 cursor-blink">â–Š</span>
          </div>

        </div>
      </div>

      <!-- Command Reference Cards -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800">
          <div class="flex items-center gap-2 mb-3">
            <div class="w-8 h-8 rounded bg-emerald-500/20 flex items-center justify-center">
              <span class="text-sm font-bold text-emerald-600 dark:text-emerald-400">1</span>
            </div>
            <h3 class="text-sm font-bold font-sans text-slate-700 dark:text-slate-300">{t('cli.card.setup.title')}</h3>
          </div>
          <code class="text-xs text-emerald-600 dark:text-emerald-400 font-mono block bg-white dark:bg-[#0D0D0D] p-2 rounded mb-2 border border-slate-200 dark:border-transparent">ck init</code>
          <p class="text-xs text-slate-600 dark:text-slate-400">{t('cli.card.setup.desc')}</p>
        </div>

        <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800">
          <div class="flex items-center gap-2 mb-3">
            <div class="w-8 h-8 rounded bg-purple-500/20 flex items-center justify-center">
              <span class="text-sm font-bold text-purple-600 dark:text-purple-400">2</span>
            </div>
            <h3 class="text-sm font-bold font-sans text-slate-700 dark:text-slate-300">{t('cli.card.start.title')}</h3>
          </div>
          <code class="text-xs text-purple-600 dark:text-purple-400 font-mono block bg-white dark:bg-[#0D0D0D] p-2 rounded mb-2 border border-slate-200 dark:border-transparent">claude</code>
          <p class="text-xs text-slate-600 dark:text-slate-400">{t('cli.card.start.desc')}</p>
        </div>

        <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800">
          <div class="flex items-center gap-2 mb-3">
            <div class="w-8 h-8 rounded bg-cyan-500/20 flex items-center justify-center">
              <span class="text-sm font-bold text-cyan-600 dark:text-cyan-400">3</span>
            </div>
            <h3 class="text-sm font-bold font-sans text-slate-700 dark:text-slate-300">{t('cli.card.skills.title')}</h3>
          </div>
          <code class="text-xs text-cyan-600 dark:text-cyan-400 font-mono block bg-white dark:bg-[#0D0D0D] p-2 rounded mb-2 border border-slate-200 dark:border-transparent">Using ui-ux-pro-max skill...</code>
          <p class="text-xs text-slate-600 dark:text-slate-400">{t('cli.card.skills.desc')}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Installation & Setup -->
  <div class="glass-card rounded-xl overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border-b border-slate-200 dark:border-slate-800">
      <h2 id="quick-start" class="text-2xl font-bold font-sans text-indigo-600 dark:text-indigo-400 flex items-center gap-3">
        <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
          <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
          <line x1="12" y1="22.08" x2="12" y2="12"/>
        </svg>
        {t('cli.guide.quick_start')}
      </h2>
      <p class="text-sm text-slate-500 dark:text-slate-400 mt-2">{t('cli.guide.quick_start_description')}</p>
    </div>

    <div class="p-8 space-y-6">
      <!-- Step 1 -->
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-full bg-indigo-500/20 text-indigo-600 dark:text-indigo-400 font-bold text-lg border-2 border-indigo-500/50 flex items-center justify-center">
          1
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-bold font-sans text-indigo-600 dark:text-indigo-400 mb-2">{t('cli.guide.step1_title')}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">{t('cli.guide.step1_description')}</p>
          <div class="bg-surface-100 dark:bg-[#0D0D0D] rounded-lg p-4 border border-slate-200 dark:border-slate-700 font-mono text-sm">
            <div class="flex items-start gap-2 text-slate-700 dark:text-slate-300">
              <span class="text-emerald-600 dark:text-emerald-400">$</span>
              <div class="flex-1">
                <div>npm install -g claudekit-cli</div>
                <div class="text-slate-500 mt-1">{t('cli.step.bun_comment')}</div>
                <div class="mt-1">bun add -g claudekit-cli</div>
                <div class="text-slate-500 mt-3">{t('cli.step.verify_comment')}</div>
                <div class="mt-1">ck --version</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-full bg-purple-500/20 text-purple-600 dark:text-purple-400 font-bold text-lg border-2 border-purple-500/50 flex items-center justify-center">
          2
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-bold font-sans text-purple-600 dark:text-purple-400 mb-2">{t('cli.guide.step2_title')}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">{t('cli.guide.step2_description')}</p>
          <div class="bg-surface-100 dark:bg-[#0D0D0D] rounded-lg p-4 border border-slate-200 dark:border-slate-700 font-mono text-sm">
            <div class="flex items-start gap-2 text-slate-700 dark:text-slate-300">
              <span class="text-emerald-600 dark:text-emerald-400">$</span>
              <div class="flex-1">
                <div>cd ~/projects/my-project</div>
                <div class="mt-2">ck init</div>
                <div class="text-slate-500 mt-2">{t('cli.step.interactive_comment')}</div>
                <div class="text-slate-500 mt-1">{t('cli.step.creates_dir_comment')}</div>
              </div>
            </div>
          </div>
          <div class="mt-3 p-3 bg-blue-500/10 rounded border border-blue-500/20">
            <div class="text-xs text-blue-600 dark:text-blue-400 mb-2 font-medium">{t('cli.step.choose_setup')}</div>
            <div class="text-xs text-slate-600 dark:text-slate-400 space-y-1">
              <div>{t('cli.step.two_options')}</div>
              <ul class="list-disc pl-4 space-y-1 mt-1">
                <li><strong>{t('cli.step.global_option')}</strong> {t('cli.step.global_desc')}</li>
                <li><strong>{t('cli.step.local_option')}</strong> {t('cli.step.local_desc')}</li>
              </ul>
              <div class="mt-2 text-slate-500">{t('cli.step.global_easiest')}</div>
            </div>
          </div>

          <div class="mt-3 p-3 bg-purple-500/10 rounded border border-purple-500/20">
            <div class="text-xs text-purple-600 dark:text-purple-400 mb-2 font-medium">{t('cli.step.auth_required')}</div>
            <div class="text-xs text-slate-600 dark:text-slate-400 space-y-1">
              <div>{t('cli.step.auth_desc')}</div>
              <div class="mt-2 bg-white dark:bg-[#0D0D0D] rounded p-2 border border-purple-500/20 font-mono">
                <code class="text-purple-700 dark:text-purple-300">gh auth login</code>
                <span class="text-slate-500 ml-2">{t('cli.step.auth_comment')}</span>
              </div>
              <div class="mt-2 text-slate-500">{t('cli.step.pat_note')}</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-full bg-emerald-500/20 text-emerald-600 dark:text-emerald-400 font-bold text-lg border-2 border-emerald-500/50 flex items-center justify-center">
          3
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-bold font-sans text-emerald-600 dark:text-emerald-400 mb-2">{t('cli.guide.step3_title')}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">{t('cli.guide.step3_description')}</p>
          <div class="bg-surface-100 dark:bg-[#0D0D0D] rounded-lg p-4 border border-slate-200 dark:border-slate-700 font-mono text-sm space-y-2">
            <div class="flex items-start gap-2 text-slate-700 dark:text-slate-300">
              <span class="text-emerald-600 dark:text-emerald-400">$</span>
              <div class="flex-1">
                <div>claude</div>
                <div class="text-slate-500 mt-1">{t('cli.step.start_cli_comment')}</div>
              </div>
            </div>
            <div class="pl-4 text-cyan-600 dark:text-cyan-400 text-xs">{t('cli.terminal.starting')}</div>
            <div class="pl-4 flex items-start gap-2">
              <span class="text-emerald-600 dark:text-emerald-400">You:</span>
              <span class="text-slate-700 dark:text-slate-300">{t('cli.step.user_prompt_3')}</span>
            </div>
          </div>
          <div class="mt-3 p-3 bg-emerald-500/10 rounded border border-emerald-500/20">
