---
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<style>
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }
  .pulse-icon {
    animation: pulse-slow 3s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  .float-animation {
    animation: float 3s ease-in-out infinite;
  }
</style>

<div class="space-y-8 mt-6">

  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight flex items-center justify-center gap-3">
      {t('uiux.guide.title')}
    </h2>
    <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t('uiux.guide.subtitle')}
    </p>
  </div>

  <!-- Hero Banner: What is it? -->
  <div class="glass-card rounded-2xl overflow-hidden relative">
      <!-- Background Blurs -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-indigo-500/10 rounded-full blur-3xl pointer-events-none"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl pointer-events-none"></div>

      <div class="p-8 relative z-10">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
            <div class="flex items-center justify-center w-20 h-20 rounded-2xl bg-indigo-500/10 flex-shrink-0 float-animation border border-indigo-500/20">
            <svg class="w-10 h-10 text-indigo-500 dark:text-indigo-400 pulse-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            </div>
            <div class="flex-1 text-center md:text-left">
            <h2 class="text-lg font-bold font-sans text-indigo-600 dark:text-indigo-400 mb-3">{t('uiux.guide.what_is_title')}</h2>
            <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
                {t('uiux.guide.what_is_description')}
            </p>
            <div class="mb-6">
                 <a href="https://github.com/nextlevelbuilder/ui-ux-pro-max-skill" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-xs font-medium text-slate-500 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                    </svg>
                    {t('uiux.guide.source_code')}
                 </a>
            </div>

            <div class="p-5 rounded-xl bg-surface-100 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800">
                <p class="text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3 uppercase tracking-wider">{t('uiux.guide.whats_inside')}</p>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm text-slate-600 dark:text-slate-400">
                <div class="flex items-center gap-2">
                    <span class="text-indigo-500 dark:text-indigo-400">•</span>
                    <span>{t('uiux.guide.whats_inside.styles')}</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-purple-500 dark:text-purple-400">•</span>
                    <span>{t('uiux.guide.whats_inside.palettes')}</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-pink-500 dark:text-pink-400">•</span>
                    <span>{t('uiux.guide.whats_inside.fonts')}</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-cyan-500 dark:text-cyan-400">•</span>
                    <span>{t('uiux.guide.whats_inside.charts')}</span>
                </div>
                </div>
            </div>
            </div>
        </div>
      </div>
  </div>

  <!-- For Whom Section -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- For Everyone -->
    <div class="group glass-card rounded-xl p-6 border-emerald-200 dark:border-emerald-500/20 hover:border-emerald-500/40 transition-all duration-300 hover:-translate-y-1">
        <div class="flex items-center gap-3 mb-4">
            <div class="p-3 rounded-lg bg-emerald-100 dark:bg-emerald-500/20 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-bold text-emerald-700 dark:text-emerald-400">{t('uiux.guide.audience.everyone.title')}</h3>
                <p class="text-xs text-slate-500 dark:text-slate-400">{t('uiux.guide.audience.everyone.subtitle')}</p>
            </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">{t('uiux.guide.audience.everyone.desc')}</p>
        <ul class="space-y-2 text-xs">
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-emerald-500">✓</span> {t('uiux.guide.audience.everyone.list1')}
            </li>
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-emerald-500">✓</span> {t('uiux.guide.audience.everyone.list2')}
            </li>
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-emerald-500">✓</span> {t('uiux.guide.audience.everyone.list3')}
            </li>
        </ul>
    </div>

    <!-- For Developers -->
    <div class="group glass-card rounded-xl p-6 border-blue-200 dark:border-blue-500/20 hover:border-blue-500/40 transition-all duration-300 hover:-translate-y-1">
        <div class="flex items-center gap-3 mb-4">
            <div class="p-3 rounded-lg bg-blue-100 dark:bg-blue-500/20 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="16 18 22 12 16 6"/>
                <polyline points="8 6 2 12 8 18"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-bold text-blue-700 dark:text-blue-400">{t('uiux.guide.audience.developers.title')}</h3>
                <p class="text-xs text-slate-500 dark:text-slate-400">{t('uiux.guide.audience.developers.subtitle')}</p>
            </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">{t('uiux.guide.audience.developers.desc')}</p>
        <ul class="space-y-2 text-xs">
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-blue-500">✓</span> {t('uiux.guide.audience.developers.list1')}
            </li>
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-blue-500">✓</span> {t('uiux.guide.audience.developers.list2')}
            </li>
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-blue-500">✓</span> {t('uiux.guide.audience.developers.list3')}
            </li>
        </ul>
    </div>

    <!-- For Designers -->
    <div class="group glass-card rounded-xl p-6 border-purple-200 dark:border-purple-500/20 hover:border-purple-500/40 transition-all duration-300 hover:-translate-y-1">
        <div class="flex items-center gap-3 mb-4">
            <div class="p-3 rounded-lg bg-purple-100 dark:bg-purple-500/20 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                  <polyline points="2 17 12 22 22 17"></polyline>
                  <polyline points="2 12 12 17 22 12"></polyline>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-bold text-purple-700 dark:text-purple-400">{t('uiux.guide.audience.designers.title')}</h3>
                <p class="text-xs text-slate-500 dark:text-slate-400">{t('uiux.guide.audience.designers.subtitle')}</p>
            </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">{t('uiux.guide.audience.designers.desc')}</p>
        <ul class="space-y-2 text-xs">
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-purple-500">✓</span> {t('uiux.guide.audience.designers.list1')}
            </li>
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-purple-500">✓</span> {t('uiux.guide.audience.designers.list2')}
            </li>
            <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                <span class="text-purple-500">✓</span> {t('uiux.guide.audience.designers.list3')}
            </li>
        </ul>
    </div>
  </div>

  <!-- How It Works Section -->
  <div class="glass-card rounded-xl overflow-hidden">
      <div class="p-6 bg-gradient-to-r from-cyan-500/10 to-blue-500/10 border-b border-slate-200 dark:border-slate-800">
        <h2 class="text-2xl font-bold text-cyan-700 dark:text-cyan-400 flex items-center gap-3">
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          {t('uiux.guide.how_it_works.title')}
        </h2>
        <p class="text-sm text-slate-600 dark:text-slate-400 mt-2">{t('uiux.guide.how_it_works.subtitle')}</p>
      </div>

      <div class="p-8 space-y-8">
        <!-- Step 1 -->
        <div class="flex items-start gap-4">
          <div class="flex flex-col items-center flex-shrink-0">
            <div class="flex items-center justify-center w-10 h-10 rounded-full bg-cyan-100 dark:bg-cyan-500/20 text-cyan-600 dark:text-cyan-400 font-bold text-lg border-2 border-cyan-500/50">1</div>
            <div class="w-0.5 h-full bg-gradient-to-b from-cyan-500/50 to-blue-500/50 my-2 min-h-[50px]"></div>
          </div>
          <div class="flex-1 pb-4">
             <div class="bg-surface-100 dark:bg-slate-900/50 rounded-xl border border-cyan-200 dark:border-cyan-500/30 p-6">
                <h3 class="text-lg font-bold text-cyan-700 dark:text-cyan-400 mb-3 flex items-center gap-2">
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2-2z"/>
                    </svg>
                    {t('uiux.guide.step1.title')}
                </h3>
                <p class="text-slate-500 dark:text-slate-300 mb-4">{t('uiux.guide.step1.desc')}</p>
                <div class="space-y-3">
                <div class="bg-white dark:bg-slate-900 rounded-lg p-4 border border-cyan-500/20">
                    <div class="flex items-center gap-3">
                        <code class="px-3 py-1.5 rounded bg-cyan-100 dark:bg-cyan-500/20 text-cyan-600 dark:text-cyan-400 font-mono text-sm">{t('uiux.guide.step1.example_label')}</code>
                        <div class="flex-1">
                          <p class="text-sm text-slate-600 dark:text-slate-400">{t('uiux.guide.step1.example_text')}</p>
                        </div>
                    </div>
                </div>
                <div class="text-xs text-slate-500 dark:text-slate-500 flex items-center gap-2">
                    <svg class="w-4 h-4 text-cyan-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    {t('uiux.guide.step1.ai_understands')}
                </div>
                </div>
             </div>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="flex items-start gap-4">
            <div class="flex flex-col items-center flex-shrink-0">
              <div class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-500/20 text-blue-600 dark:text-blue-400 font-bold text-lg border-2 border-blue-500/50">2</div>
              <div class="w-0.5 h-full bg-gradient-to-b from-blue-500/50 to-indigo-500/50 my-2 min-h-[50px]"></div>
            </div>
            <div class="flex-1 pb-4">
               <div class="bg-surface-100 dark:bg-slate-900/50 rounded-xl border border-blue-200 dark:border-blue-500/30 p-6">
                  <h3 class="text-lg font-bold text-blue-700 dark:text-blue-400 mb-3 flex items-center gap-2">
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="11" cy="11" r="8"/>
                      <path d="m21 21-4.35-4.35"/>
                    </svg>
                    {t('uiux.guide.step2.title')}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-300 mb-4 text-sm">{t('uiux.guide.step2.desc')}</p>

                  <div class="bg-blue-100 dark:bg-blue-500/10 rounded-lg p-4 border border-blue-200 dark:border-blue-500/20">
                    <div class="text-xs font-medium text-blue-600 dark:text-blue-400 mb-3">{t('uiux.guide.step2.searching_for')}</div>
                    <div class="grid grid-cols-2 gap-2 text-xs text-slate-600 dark:text-slate-400">
                        <div class="flex items-center gap-2">
                          <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                          <span><strong>{t('uiux.guide.step2.item1')}</strong> {t('uiux.guide.step2.item1_desc')}</span>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                          <span><strong>{t('uiux.guide.step2.item2')}</strong> {t('uiux.guide.step2.item2_desc')}</span>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                          <span><strong>{t('uiux.guide.step2.item3')}</strong> {t('uiux.guide.step2.item3_desc')}</span>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                          <span><strong>{t('uiux.guide.step2.item4')}</strong> {t('uiux.guide.step2.item4_desc')}</span>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                          <span><strong>{t('uiux.guide.step2.item5')}</strong> {t('uiux.guide.step2.item5_desc')}</span>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                          <span><strong>{t('uiux.guide.step2.item6')}</strong> {t('uiux.guide.step2.item6_desc')}</span>
                        </div>
                    </div>
                  </div>
               </div>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="flex items-start gap-4">
            <div class="flex flex-col items-center flex-shrink-0">
              <div class="flex items-center justify-center w-10 h-10 rounded-full bg-indigo-100 dark:bg-indigo-500/20 text-indigo-600 dark:text-indigo-400 font-bold text-lg border-2 border-indigo-500/50">3</div>
            </div>
            <div class="flex-1">
               <div class="bg-surface-100 dark:bg-slate-900/50 rounded-xl border border-indigo-200 dark:border-indigo-500/30 p-6">
                  <h3 class="text-lg font-bold text-indigo-700 dark:text-indigo-400 mb-3 flex items-center gap-2">
                      <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="16 18 22 12 16 6"/>
                        <polyline points="8 6 2 12 8 18"/>
                      </svg>
                      {t('uiux.guide.step3.title')}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-300 text-sm mb-3">
                      {t('uiux.guide.step3.desc')}
                  </p>

                  <div class="bg-indigo-100 dark:bg-indigo-500/10 rounded-lg p-4 border border-indigo-200 dark:border-indigo-500/20">
                    <div class="text-xs font-medium text-indigo-600 dark:text-indigo-400 mb-2">{t('uiux.guide.step3.receive_label')}</div>
                    <ul class="space-y-1 text-xs text-slate-600 dark:text-slate-400">
                      <li class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-indigo-500 dark:text-indigo-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                        {t('uiux.guide.step3.item1')}
                      </li>
                      <li class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-indigo-500 dark:text-indigo-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                        {t('uiux.guide.step3.item2')}
                      </li>
                      <li class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-indigo-500 dark:text-indigo-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                        {t('uiux.guide.step3.item3')}
                      </li>
                      <li class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-indigo-500 dark:text-indigo-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                        {t('uiux.guide.step3.item4')}
                      </li>
                      <li class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-indigo-500 dark:text-indigo-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
                        {t('uiux.guide.step3.item5')}
                      </li>
                    </ul>
                  </div>
               </div>
            </div>
        </div>

        <!-- Result Callout -->
        <div class="mt-6 p-6 rounded-lg bg-gradient-to-r from-emerald-500/10 to-green-500/10 border border-emerald-500/30">
            <div class="flex items-start gap-4">
            <svg class="w-8 h-8 text-emerald-500 dark:text-emerald-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <div>
                <h4 class="text-lg font-bold text-emerald-600 dark:text-emerald-400 mb-2">{t('uiux.guide.result.title')}</h4>
                <p class="text-slate-600 dark:text-slate-300 mb-3 text-sm">{t('uiux.guide.result.desc')}</p>
                <div class="bg-white/50 dark:bg-slate-900/50 rounded-lg p-4 border border-emerald-500/20">
                <p class="text-xs text-slate-500 mb-2"><strong class="text-slate-600 dark:text-slate-300">{t('uiux.guide.result.time_saved')}</strong></p>
                <div class="grid grid-cols-2 gap-2 text-xs">
                    <div>
                    <span class="text-slate-500">{t('uiux.guide.result.traditional')}</span>
                    <span class="text-red-500 dark:text-red-400 font-medium ml-2">{t('uiux.guide.result.traditional_time')}</span>
                    </div>
                    <div>
                    <span class="text-slate-500">{t('uiux.guide.result.with_tool')}</span>
                    <span class="text-emerald-600 dark:text-emerald-400 font-medium ml-2">{t('uiux.guide.result.tool_time')}</span>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>

      </div>
  </div>

  <!-- What You Can Build Section -->
  <div class="space-y-6">
    <h2 class="text-2xl font-bold flex items-center gap-3 text-slate-900 dark:text-white">
        <svg class="w-7 h-7 text-pink-500 dark:text-pink-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
