---
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const categories = [
  {
    name: t('commands.guide.planning_development'),
    description: t('commands.guide.planning_development_desc'),
    color: 'blue',
    icon: `<path d="M9 5H2v7l6.29 6.29c.94.94 2.48.94 3.42 0l3.58-3.58c.94-.94.94-2.48 0-3.42L9 5z"/>`,
    commands: [
      { command: '/plan', complexity: '⚡⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.plan') },
      { command: '/code', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.code') },
      { command: '/cook', complexity: '⚡⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.cook') },
      { command: '/bootstrap', complexity: '⚡⚡⚡⚡⚡', label: t('commands.label.advanced'), desc: t('commands.desc.bootstrap') },
      { command: '/brainstorm', complexity: '⚡⚡', label: t('commands.label.easy'), desc: t('commands.desc.brainstorm') }
    ]
  },
  {
    name: t('commands.guide.fixing_debugging'),
    description: t('commands.guide.fixing_debugging_desc'),
    color: 'red',
    icon: `<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>`,
    commands: [
      { command: '/fix', complexity: '⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.fix') },
      { command: '/debug', complexity: '⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.debug') },
      { command: '/fix:test', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.fix_test') },
      { command: '/fix:ui', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.fix_ui') },
      { command: '/fix:types', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.fix_types') },
      { command: '/fix:ci', complexity: '⚡', label: t('commands.label.medium'), desc: t('commands.desc.fix_ci') }
    ]
  },
  {
    name: t('commands.guide.testing_quality'),
    description: t('commands.guide.testing_quality_desc'),
    color: 'green',
    icon: `<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>`,
    commands: [
      { command: '/test', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.test') },
      { command: '/review:codebase', complexity: '⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.review_codebase') },
      { command: '/watzup', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.watzup') }
    ]
  },
  {
    name: t('commands.guide.navigation_help'),
    description: t('commands.guide.navigation_help_desc'),
    color: 'purple',
    icon: `<circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/>`,
    commands: [
      { command: '/ask', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.ask') },
      { command: '/scout', complexity: '⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.scout') },
      { command: '/ck-help', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.ck_help') },
      { command: '/resume', complexity: '⚡', label: t('commands.label.advanced'), desc: t('commands.desc.resume') }
    ]
  },
  {
    name: 'Design & Content',
    description: 'Create beautiful designs and content',
    color: 'pink',
    icon: `<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/>`,
    commands: [
      { command: '/design:fast', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.design_fast') },
      { command: '/design:good', complexity: '⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.design_good') },
      { command: '/content:enhance', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.content_enhance') }
    ]
  },
  {
    name: 'Git & Version Control',
    description: 'Manage your code versions',
    color: 'orange',
    icon: `<circle cx="18" cy="18" r="3"/><circle cx="6" cy="6" r="3"/><path d="M13 6h3a2 2 0 0 1 2 2v7"/><line x1="6" y1="9" x2="6" y2="21"/>`,
    commands: [
      { command: '/git:cm', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.git_cm') },
      { command: '/git:pr', complexity: '⚡', label: t('commands.label.easy'), desc: t('commands.desc.git_pr') },
      { command: '/git:merge', complexity: '⚡⚡', label: t('commands.label.medium'), desc: t('commands.desc.git_merge') }
    ]
  }
];

const styles = {
  blue: {
    border: 'border-blue-500/30 group-hover:border-blue-500/50',
    bg: 'bg-gradient-to-r from-blue-500/10 to-cyan-500/10',
    text: 'text-blue-600 dark:text-blue-400',
    hover: 'hover:border-blue-500/30',
    badge: 'bg-amber-500/20 text-amber-600 dark:text-amber-400'
  },
  red: {
    border: 'border-red-500/30 group-hover:border-red-500/50',
    bg: 'bg-gradient-to-r from-red-500/10 to-orange-500/10',
    text: 'text-red-600 dark:text-red-400',
    hover: 'hover:border-red-500/30',
    badge: 'bg-amber-500/20 text-amber-600 dark:text-amber-400'
  },
  green: {
    border: 'border-green-500/30 group-hover:border-green-500/50',
    bg: 'bg-gradient-to-r from-green-500/10 to-emerald-500/10',
    text: 'text-green-600 dark:text-green-400',
    hover: 'hover:border-green-500/30',
    badge: 'bg-green-500/20 text-green-600 dark:text-green-400'
  },
  purple: {
    border: 'border-purple-500/30 group-hover:border-purple-500/50',
    bg: 'bg-gradient-to-r from-purple-500/10 to-pink-500/10',
    text: 'text-purple-600 dark:text-purple-400',
    hover: 'hover:border-purple-500/30',
    badge: 'bg-green-500/20 text-green-600 dark:text-green-400'
  },
  pink: {
    border: 'border-pink-500/30 group-hover:border-pink-500/50',
    bg: 'bg-gradient-to-r from-pink-500/10 to-rose-500/10',
    text: 'text-pink-600 dark:text-pink-400',
    hover: 'hover:border-pink-500/30',
    badge: 'bg-green-500/20 text-green-600 dark:text-green-400'
  },
  orange: {
    border: 'border-orange-500/30 group-hover:border-orange-500/50',
    bg: 'bg-gradient-to-r from-orange-500/10 to-amber-500/10',
    text: 'text-orange-600 dark:text-orange-400',
    hover: 'hover:border-orange-500/30',
    badge: 'bg-green-500/20 text-green-600 dark:text-green-400'
  }
};

const complexityColors: Record<string, string> = {
  [t('commands.label.easy')]: 'bg-green-500/20 text-green-700 dark:text-green-400',
  [t('commands.label.medium')]: 'bg-amber-500/20 text-amber-700 dark:text-amber-400',
  [t('commands.label.advanced')]: 'bg-red-500/20 text-red-700 dark:text-red-400'
};
// Add fallback for direct string matching just in case
complexityColors['Easy'] = complexityColors[t('commands.label.easy')];
complexityColors['Medium'] = complexityColors[t('commands.label.medium')];
complexityColors['Advanced'] = complexityColors[t('commands.label.advanced')];
---

<style>
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }
  .pulse-icon {
    animation: pulse-slow 3s ease-in-out infinite;
  }
  @keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  .flow-arrow {
    animation: flow 2s ease-in-out infinite;
  }
</style>

<div class="space-y-8 mt-6">

  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight flex items-center justify-center gap-3">
      {t('guides.commands.title')}
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t('guides.commands.description')}
    </p>
  </div>

  <!-- Hero Banner -->
  <div class="flex items-start gap-4 p-6 rounded-xl bg-purple-500/5 dark:bg-purple-500/10 border border-purple-200 dark:border-purple-500/20">
    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-500/20 flex items-center justify-center">
      <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-1 1.5-2.4 1.5-3.8 0-3.3-2.7-6-6-6-3.3 0-6 2.7-6 6 0 1.4.5 2.8 1.5 3.8.8.8 1.3 1.5 1.5 2.5"/>
        <path d="M9 18h6"/>
        <path d="M10 22h4"/>
      </svg>
    </div>
    <div class="flex-1">
      <div class="font-bold text-purple-700 dark:text-purple-400 mb-1 text-lg">{t('commands.hero.title')}</div>
      <div class="text-slate-600 dark:text-slate-400 leading-relaxed">
        <Fragment set:html={t('commands.hero.description')} />
      </div>
      <div class="mt-4 p-4 rounded-lg bg-white/50 dark:bg-slate-900/50 border border-purple-100 dark:border-purple-500/10">
        <p class="text-xs font-bold text-purple-700 dark:text-purple-400 mb-2 uppercase tracking-wide">{t('commands.hero.example_label')}</p>
        <div class="flex items-center gap-3 flex-wrap">
          <code class="px-2 py-1 rounded bg-slate-100 dark:bg-slate-950 text-slate-700 dark:text-slate-300 font-mono text-sm border border-slate-200 dark:border-slate-800">/cook "add a login button"</code>
          <span class="text-slate-400 text-sm">→</span>
          <span class="text-sm text-slate-600 dark:text-slate-400">{t('commands.hero.example_outcome')}</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Start Section -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Beginner -->
    <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-green-500/30 overflow-hidden hover:border-green-500/50 transition-colors duration-200 cursor-pointer group">
      <div class="p-6 bg-gradient-to-br from-green-500/10 to-emerald-500/10 border-b border-slate-100 dark:border-slate-800">
        <div class="flex items-center gap-3 mb-2">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-500/20">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-green-600 dark:text-green-400">{t('commands.qs.beginner.title')}</h3>
            <p class="text-xs text-slate-500">{t('commands.qs.beginner.subtitle')}</p>
          </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400">{t('commands.qs.beginner.desc')}</p>
      </div>
      <div class="p-4 space-y-2">
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-green-500/30 transition-colors">
          <code class="text-sm text-green-600 dark:text-green-400 font-mono">/ask</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.ask.desc')}</p>
        </div>
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-green-500/30 transition-colors">
          <code class="text-sm text-green-600 dark:text-green-400 font-mono">/brainstorm</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.brainstorm.desc')}</p>
        </div>
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-green-500/30 transition-colors">
          <code class="text-sm text-green-600 dark:text-green-400 font-mono">/fix</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.fix.desc')}</p>
        </div>
      </div>
    </div>

    <!-- Intermediate -->
    <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-amber-500/30 overflow-hidden hover:border-amber-500/50 transition-colors duration-200 cursor-pointer group">
      <div class="p-6 bg-gradient-to-br from-amber-500/10 to-orange-500/10 border-b border-slate-100 dark:border-slate-800">
        <div class="flex items-center gap-3 mb-2">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-amber-500/20">
            <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M13 3L4 14h7l-1 7 9-11h-7l1-7z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-amber-600 dark:text-amber-400">{t('commands.qs.intermediate.title')}</h3>
            <p class="text-xs text-slate-500">{t('commands.qs.intermediate.subtitle')}</p>
          </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400">{t('commands.qs.intermediate.desc')}</p>
      </div>
      <div class="p-4 space-y-2">
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-amber-500/30 transition-colors">
          <code class="text-sm text-amber-600 dark:text-amber-400 font-mono">/plan</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.plan.desc')}</p>
        </div>
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-amber-500/30 transition-colors">
          <code class="text-sm text-amber-600 dark:text-amber-400 font-mono">/code</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.code.desc')}</p>
        </div>
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-amber-500/30 transition-colors">
          <code class="text-sm text-amber-600 dark:text-amber-400 font-mono">/cook</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.cook.desc')}</p>
        </div>
      </div>
    </div>

    <!-- Advanced -->
    <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-red-500/30 overflow-hidden hover:border-red-500/50 transition-colors duration-200 cursor-pointer group">
      <div class="p-6 bg-gradient-to-br from-red-500/10 to-pink-500/10 border-b border-slate-100 dark:border-slate-800">
        <div class="flex items-center gap-3 mb-2">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-red-500/20">
            <svg class="w-6 h-6 text-red-600 dark:text-red-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-red-600 dark:text-red-400">{t('commands.qs.advanced.title')}</h3>
            <p class="text-xs text-slate-500">{t('commands.qs.advanced.subtitle')}</p>
          </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400">{t('commands.qs.advanced.desc')}</p>
      </div>
      <div class="p-4 space-y-2">
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-red-500/30 transition-colors">
          <code class="text-sm text-red-600 dark:text-red-400 font-mono">/bootstrap</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.bootstrap.desc')}</p>
        </div>
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-red-500/30 transition-colors">
          <code class="text-sm text-red-600 dark:text-red-400 font-mono">/scout</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.scout.desc')}</p>
        </div>
        <div class="p-3 rounded-lg bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 group-hover:border-red-500/30 transition-colors">
          <code class="text-sm text-red-600 dark:text-red-400 font-mono">/watzup</code>
          <p class="text-xs text-slate-500 mt-1">{t('commands.cmd.watzup.desc')}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Visual Journey Section -->
  <div class="bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-purple-500/10 to-blue-500/10 border-b border-slate-100 dark:border-slate-800">
      <h2 class="text-2xl font-bold flex items-center gap-3 text-slate-900 dark:text-white">
        <svg class="w-7 h-7 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="8 12 12 16 16 12"/>
          <line x1="12" y1="8" x2="12" y2="16"/>
        </svg>
        {t('commands.journey.title')}
      </h2>
      <p class="text-sm text-slate-600 dark:text-slate-400 mt-2">{t('commands.journey.subtitle')}</p>
    </div>

    <div class="p-8">
      <div class="space-y-6">
        <!-- Step 1: Idea -->
        <div class="flex items-start gap-4">
          <div class="flex flex-col items-center flex-shrink-0">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-purple-500/20 text-purple-600 dark:text-purple-400 font-bold text-lg border-2 border-purple-500/50">
              1
            </div>
            <div class="w-0.5 h-full bg-gradient-to-b from-purple-500/50 to-blue-500/50 mt-3"></div>
          </div>
          <div class="flex-1 pb-6">
            <div class="bg-slate-50 dark:bg-slate-950 rounded-xl border border-purple-500/30 p-6">
              <h3 class="text-xl font-bold text-purple-600 dark:text-purple-400 mb-3 flex items-center gap-2">
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
                {t('commands.journey.step1.title')}
              </h3>
              <p class="text-slate-700 dark:text-slate-300 mb-4">{t('commands.journey.step1.desc')}</p>
              <div class="space-y-3">
                <div class="bg-white dark:bg-slate-900/50 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
                  <div class="flex items-start gap-3">
                    <code class="px-3 py-1.5 rounded bg-purple-500/20 text-purple-600 dark:text-purple-400 font-mono text-sm">/brainstorm</code>
                    <div class="flex-1">
                      <p class="text-sm text-slate-600 dark:text-slate-400">{t('commands.journey.step1.example')}</p>
                    </div>
                  </div>
                </div>
                <div class="text-xs text-slate-500 flex items-center gap-2">
                  <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {t('commands.journey.step1.status')}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2: Plan -->
        <div class="flex items-start gap-4">
          <div class="flex flex-col items-center flex-shrink-0">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-500/20 text-blue-600 dark:text-blue-400 font-bold text-lg border-2 border-blue-500/50">
              2
            </div>
            <div class="w-0.5 h-full bg-gradient-to-b from-blue-500/50 to-green-500/50 mt-3"></div>
          </div>
          <div class="flex-1 pb-6">
            <div class="bg-slate-50 dark:bg-slate-950 rounded-xl border border-blue-500/30 p-6">
              <h3 class="text-xl font-bold text-blue-600 dark:text-blue-400 mb-3 flex items-center gap-2">
                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 5H2v7l6.29 6.29c.94.94 2.48.94 3.42 0l3.58-3.58c.94-.94.94-2.48 0-3.42L9 5z"/>
                  <path d="M6 9.01V9"/>
                </svg>
                {t('commands.journey.step2.title')}
              </h3>
              <p class="text-slate-700 dark:text-slate-300 mb-4">{t('commands.journey.step2.desc')}</p>
              <div class="space-y-3">
                <div class="bg-white dark:bg-slate-900/50 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
                  <div class="flex items-start gap-3">
                    <code class="px-3 py-1.5 rounded bg-blue-500/20 text-blue-600 dark:text-blue-400 font-mono text-sm">/plan</code>
                    <div class="flex-1">
                      <p class="text-sm text-slate-600 dark:text-slate-400">{t('commands.journey.step2.example')}</p>
                    </div>
                  </div>
                </div>
                <div class="bg-blue-500/10 rounded-lg p-4 border border-blue-500/20">
                  <div class="text-xs font-medium text-blue-600 dark:text-blue-400 mb-2">{t('commands.journey.step2.plan_includes')}</div>
                  <ul class="space-y-1 text-xs text-slate-600 dark:text-slate-400">
                    <li class="flex items-center gap-2">
                      <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
