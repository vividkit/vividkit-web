---
import { commandCategories } from '@/data/guides/commands';

const colorMap: Record<string, string> = {
  purple: 'bg-purple-500/10 text-purple-600 dark:text-purple-400 border-purple-500/20',
  blue: 'bg-blue-500/10 text-blue-600 dark:text-blue-400 border-blue-500/20',
  green: 'bg-green-500/10 text-green-600 dark:text-green-400 border-green-500/20',
  pink: 'bg-pink-500/10 text-pink-600 dark:text-pink-400 border-pink-500/20',
  orange: 'bg-orange-500/10 text-orange-600 dark:text-orange-400 border-orange-500/20',
  indigo: 'bg-indigo-500/10 text-indigo-600 dark:text-indigo-400 border-indigo-500/20'
};
---

<div class="space-y-8">
  <div class="text-center space-y-4">
    <h2 class="text-3xl font-bold text-slate-900 dark:text-white">
      Slash Commands Reference
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
      Discover all available slash commands organized by category. Each command is designed to solve specific development challenges efficiently.
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {commandCategories.map((category) => (
      <div class={`p-6 rounded-xl border ${colorMap[category.color]} bg-white dark:bg-slate-900/50 hover:shadow-lg transition-shadow`}>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <span class="text-2xl">{category.icon}</span>
            <h3 class="text-xl font-semibold text-slate-900 dark:text-white">
              {category.name}
            </h3>
          </div>

          <ul class="space-y-3">
            {category.commands.map((cmd) => (
              <li class="space-y-1">
                <div class="flex items-center gap-2">
                  <code class="px-2 py-1 bg-slate-100 dark:bg-slate-800 rounded text-sm font-mono text-slate-700 dark:text-slate-300">
                    {cmd.command}
                  </code>
                </div>
                <p class="text-sm text-slate-600 dark:text-slate-400 pl-1">
                  {cmd.description}
                </p>
              </li>
            ))}
          </ul>

          <div class="pt-2">
            <a
              href={`/docs/commands#${category.name.toLowerCase()}`}
              class="text-sm text-primary hover:underline inline-flex items-center gap-1"
            >
              View all {category.name} commands
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-xl p-6 border border-blue-500/20">
    <div class="flex items-start gap-4">
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="flex-1">
        <h4 class="font-semibold text-slate-900 dark:text-white mb-2">Pro Tip</h4>
        <p class="text-slate-600 dark:text-slate-400">
          Type <code class="px-1 py-0.5 bg-slate-200 dark:bg-slate-700 rounded text-sm">/</code> in any conversation to see available commands. Use <code class="px-1 py-0.5 bg-slate-200 dark:bg-slate-700 rounded text-sm">Tab</code> to autocomplete.
        </p>
      </div>
    </div>
  </div>
</div>