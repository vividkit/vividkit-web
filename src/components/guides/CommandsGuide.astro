---
import { commandCategories } from '@/data/guides/commands';

const colorMap: Record<string, string> = {
  purple: 'group-hover:border-purple-500/30 group-hover:bg-purple-500/5',
  blue: 'group-hover:border-blue-500/30 group-hover:bg-blue-500/5',
  green: 'group-hover:border-green-500/30 group-hover:bg-green-500/5',
  pink: 'group-hover:border-pink-500/30 group-hover:bg-pink-500/5',
  orange: 'group-hover:border-orange-500/30 group-hover:bg-orange-500/5',
  indigo: 'group-hover:border-indigo-500/30 group-hover:bg-indigo-500/5'
};

const iconColorMap: Record<string, string> = {
  purple: 'text-purple-600 dark:text-purple-400',
  blue: 'text-blue-600 dark:text-blue-400',
  green: 'text-green-600 dark:text-green-400',
  pink: 'text-pink-600 dark:text-pink-400',
  orange: 'text-orange-600 dark:text-orange-400',
  indigo: 'text-indigo-600 dark:text-indigo-400'
};
---

<div class="space-y-12">
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      Slash Commands Reference
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      Discover all available slash commands organized by category. Each command is designed to solve specific development challenges efficiently.
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {commandCategories.map((category) => (
      <div class={`group relative p-6 rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900/50 backdrop-blur-sm transition-all duration-300 hover:shadow-xl hover:-translate-y-1 ${colorMap[category.color] || ''}`}>
        <div class="space-y-6">
          <div class="flex items-center gap-4 border-b border-slate-100 dark:border-slate-800/50 pb-4">
            <span class={`text-3xl ${iconColorMap[category.color] || 'text-slate-600'}`}>{category.icon}</span>
            <h3 id={category.name.toLowerCase()} class="text-xl font-bold text-slate-900 dark:text-white scroll-mt-32">
              {category.name}
            </h3>
          </div>

          <ul class="space-y-5">
            {category.commands.map((cmd) => (
              <li class="space-y-2">
                <div class="flex items-start justify-between gap-2">
                  <code class="px-2.5 py-1 bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700/50 rounded-md text-sm font-mono font-semibold text-blue-600 dark:text-blue-400 shadow-sm">
                    {cmd.command}
                  </code>
                </div>
                <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                  {cmd.description}
                </p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>

  <div class="relative overflow-hidden rounded-2xl glass-card border border-blue-200/50 dark:border-blue-800/30 p-8">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5"></div>
    <div class="relative flex items-start gap-6">
      <div class="flex-shrink-0 p-3 bg-blue-100 dark:bg-blue-900/30 rounded-xl text-blue-600 dark:text-blue-400">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="flex-1">
        <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-2">Pro Tip</h4>
        <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
          Type <code class="px-1.5 py-0.5 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded text-sm font-semibold shadow-sm">/</code> in any conversation to see available commands directly in your input. Use <code class="px-1.5 py-0.5 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded text-sm font-semibold shadow-sm">Tab</code> to autocomplete instantly.
        </p>
      </div>
    </div>
  </div>
</div>