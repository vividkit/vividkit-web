---
import { getLangFromUrl, useTranslatedPath, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(currentLang);

// Translations
const translations = {
  en: {
    pageTitle: 'Custom Hooks',
    pageSubtitle: 'Customize your vibe coding workflow with powerful hooks for Claude Code. Automate notifications, actions, and integrations.',
    infoBannerTitle: 'What are Custom Hooks?',
    infoBannerDesc: 'Claude Code hooks are shell commands that execute in response to events like tool calls, session start, or agent completion.',
    infoBannerNote: 'These hooks live in',
    infoBannerNoteEnd: 'and can automate your workflow.',
    availableHooksTitle: 'Available Custom Hooks',
    hookDiscordTitle: 'Discord Notification',
    hookDiscordDesc: 'Get notified on Discord when Claude needs your attention during multi-phase sessions.',
    moreComingSoon: 'More hooks coming soon...',
    moreComingSoonDesc: 'Slack notifications, Telegram alerts, auto-commit, and more!',
    officialDocsText: 'Learn more about ClaudeKit built-in hooks at',
    officialDocsLink: 'ClaudeKit Documentation',
  },
  vi: {
    pageTitle: 'Custom Hooks',
    pageSubtitle: 'Tùy chỉnh workflow vibe coding với hooks cho Claude Code. Tự động notifications, actions, và integrations.',
    infoBannerTitle: 'Custom Hooks là gì?',
    infoBannerDesc: 'Claude Code hooks là shell commands chạy khi có events như tool calls, session start, hoặc agent completion.',
    infoBannerNote: 'Hooks nằm trong',
    infoBannerNoteEnd: 'và có thể tự động hóa workflow của bạn.',
    availableHooksTitle: 'Các Custom Hooks',
    hookDiscordTitle: 'Discord Notification',
    hookDiscordDesc: 'Nhận thông báo trên Discord khi Claude cần bạn trong các session multi-phase.',
    moreComingSoon: 'Thêm hooks sắp ra mắt...',
    moreComingSoonDesc: 'Slack notifications, Telegram alerts, auto-commit, và nhiều hơn!',
    officialDocsText: 'Tìm hiểu thêm các built-in hooks của ClaudeKit tại',
    officialDocsLink: 'ClaudeKit Documentation',
  }
};

const t = translations[currentLang] || translations.en;

const hooks = [
  {
    title: t.hookDiscordTitle,
    description: t.hookDiscordDesc,
    icon: `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor"><path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/></svg>`,
    href: '/guides/hooks/discord-notification',
    tags: ['productivity', 'notifications'],
  },
];
---

<div class="space-y-8 mt-6">
  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      {t.pageTitle}
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t.pageSubtitle}
    </p>
  </div>

  <!-- Info Banner -->
  <div class="flex items-start gap-4 p-6 rounded-xl bg-blue-500/5 dark:bg-blue-500/10 border border-blue-200 dark:border-blue-500/20">
    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-500/20 flex items-center justify-center">
      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"/>
        <line x1="12" y1="16" x2="12" y2="12"/>
        <line x1="12" y1="8" x2="12.01" y2="8"/>
      </svg>
    </div>
    <div class="flex-1">
      <div class="font-bold text-blue-700 dark:text-blue-400 mb-1 text-lg">{t.infoBannerTitle}</div>
      <div class="text-slate-600 dark:text-slate-400 leading-relaxed">
        {t.infoBannerDesc}
        {t.infoBannerNote} <code class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-slate-800 text-sm">~/.claude/settings.json</code> {t.infoBannerNoteEnd}
      </div>
    </div>
  </div>

  <!-- Available Hooks Grid -->
  <div class="space-y-4">
    <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t.availableHooksTitle}</h3>

    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-1">
      {hooks.map((hook) => (
        <a
          href={translatePath(hook.href)}
          class="group block p-6 bg-white dark:bg-slate-900/50 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-blue-300 dark:hover:border-blue-500/50 transition-all duration-200 hover:shadow-lg hover:shadow-blue-500/5"
        >
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white shadow-lg shadow-indigo-500/20">
              <Fragment set:html={hook.icon} />
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <h4 class="text-lg font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {hook.title}
                </h4>
                <svg class="w-4 h-4 text-slate-400 group-hover:text-blue-500 group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed">
                {hook.description}
              </p>
              <div class="flex gap-2 mt-3">
                {hook.tags.map((tag) => (
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>

  <!-- More Coming Soon -->
  <div class="text-center py-8 border border-dashed border-slate-200 dark:border-slate-700 rounded-xl">
    <div class="text-slate-400 dark:text-slate-500 mb-2">
      <svg class="w-8 h-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
    </div>
    <p class="text-slate-500 dark:text-slate-400 font-medium">{t.moreComingSoon}</p>
    <p class="text-slate-400 dark:text-slate-500 text-sm mt-1">{t.moreComingSoonDesc}</p>
  </div>

  <!-- Official Docs Link -->
  <div class="text-center pt-8 border-t border-slate-200 dark:border-slate-800">
    <p class="text-slate-600 dark:text-slate-400 text-sm">
      {t.officialDocsText}
      <a href="https://docs.claudekit.cc/docs/configuration/hooks#built-in-hooks" target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline font-medium inline-flex items-center gap-1">
        {t.officialDocsLink}
        <svg class="w-3 h-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
          <polyline points="15 3 21 3 21 9"/>
          <line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
      </a>
    </p>
  </div>
</div>
