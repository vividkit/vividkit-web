      "Bash(npm run db:push)",
      "Bash(bun run db:push)",
      "Bash(pnpm run db:push)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(sudo rm -rf :*::*)",
      "Bash(dd if=/dev/zero of=/dev/sd*:*)",
      "Bash(mkfs.:*::*)",
      "Bash(fdisk:*)",
      "Bash(parted:*)",
      "Bash(chown -R /:*)",
      "Bash(chmod -R 0 /:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(systemctl poweroff:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fdx:*)",
      "Bash(git push --force:*)",
