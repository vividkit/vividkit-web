---
import { useTranslations } from '@/i18n/utils';
import { getLangFromUrl, type Language } from '@/i18n';

interface Props {
  lang?: Language;
}

const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<div class="space-y-8 mt-6">
  <!-- Page Header -->
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-slate-900 dark:text-white tracking-tight">
      {t('ccs.guide.title')}
    </h2>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed">
      {t('ccs.guide.description')}
    </p>
  </div>

  <!-- Note: Moved from CLIGuide.astro -->
  <div class="glass-card rounded-xl border-orange-200 dark:border-amber-500/30 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-amber-500/10 to-orange-500/10 border-b border-orange-200 dark:border-slate-800">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <span class="px-3 py-1 text-xs rounded-full bg-amber-500/20 text-amber-700 dark:text-amber-400 font-bold border border-amber-500/40">{t('ccs.guide.power_tool_badge')}</span>
            <div class="flex items-center gap-3">
              <svg class="w-7 h-7 text-amber-600 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                <path d="M2 12h20"/>
              </svg>
            </div>
          </div>
          <p class="text-sm text-slate-600 dark:text-slate-400 mt-2 max-w-xl leading-relaxed">
            {t('ccs.guide.power_tool_desc')}
            <br/><span class="opacity-75 text-xs">{t('ccs.guide.power_tool_note')}</span>
          </p>
        </div>

        <a href="https://github.com/kaitranntt/ccs" target="_blank" rel="noopener noreferrer"
           class="flex items-center gap-3 px-4 py-2 rounded-xl bg-white/60 dark:bg-black/20 border border-amber-200/50 dark:border-amber-900/30 hover:bg-white/80 dark:hover:bg-black/30 hover:scale-105 transition-all group shadow-sm shrink-0">
           <svg class="w-5 h-5 text-slate-600 dark:text-slate-400 group-hover:text-black dark:group-hover:text-white transition-colors" viewBox="0 0 24 24" fill="currentColor">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
           </svg>
           <div class="flex flex-col">
             <span class="text-[10px] uppercase tracking-wider font-bold text-amber-600/60 dark:text-amber-400/60 leading-none mb-0.5">{t('ccs.guide.created_by')}</span>
             <span class="text-sm font-bold text-slate-800 dark:text-slate-200 group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors leading-none">@kaitranntt</span>
           </div>
        </a>
      </div>
    </div>

    <div class="p-8 space-y-6">
      <!-- What is CCS -->
      <div class="p-5 rounded-lg bg-gradient-to-r from-amber-500/10 to-orange-500/10 border border-amber-500/20">
        <h3 class="text-lg font-bold font-sans text-amber-600 dark:text-amber-400 mb-2 flex items-center gap-2">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 16v-4M12 8h.01"/>
          </svg>
          {t('ccs.guide.what_is_title')}
        </h3>
        <p class="text-sm text-slate-700 dark:text-slate-300 mb-3">
          {t('ccs.guide.what_is_desc_prefix')}
        </p>
        <div class="mb-3 px-3 py-2 bg-amber-500/10 rounded-lg border border-amber-500/20 text-xs text-slate-700 dark:text-slate-300">
          <Fragment set:html={t('ccs.guide.new_feature').replace('New:', '<span class="font-bold text-amber-600 dark:text-amber-400">New:</span>').replace('Gemini', '<strong class="text-amber-700 dark:text-amber-300">Gemini</strong>').replace('Codex', '<strong class="text-amber-700 dark:text-amber-300">Codex</strong>').replace('Antigravity', '<strong class="text-amber-700 dark:text-amber-300">Antigravity</strong>')} />
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-xs text-slate-600 dark:text-slate-400">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"/>
            </svg>
            <span>{t('ccs.guide.feature_switch')}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"/>
            </svg>
            <span>{t('ccs.guide.feature_cost')}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"/>
            </svg>
            <span>{t('ccs.guide.feature_delegation')}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500 dark:text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"/>
            </svg>
            <span>{t('ccs.guide.feature_parallel')}</span>
          </div>
        </div>
      </div>

      <!-- Installation -->
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-full bg-amber-500/20 text-amber-600 dark:text-amber-400 font-bold text-lg border-2 border-amber-500/50 flex items-center justify-center">
          1
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-bold font-sans text-amber-600 dark:text-amber-400 mb-2">{t('ccs.guide.install_title')}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">{t('ccs.guide.install_desc')}</p>
          <div class="bg-surface-100 dark:bg-[#0D0D0D] rounded-lg p-4 border border-slate-200 dark:border-slate-700 font-mono text-sm">
            <div class="flex items-start gap-2 text-slate-700 dark:text-slate-300">
              <span class="text-emerald-600 dark:text-emerald-400">$</span>
              <div class="flex-1">
                <div>npm install -g @kaitranntt/ccs</div>
                <div class="text-slate-500 mt-2">{t('ccs.guide.verify_cmd')}</div>
                <div class="mt-1">ccs --version</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Usage -->
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-full bg-orange-500/20 text-orange-600 dark:text-orange-400 font-bold text-lg border-2 border-orange-500/50 flex items-center justify-center">
          2
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-bold font-sans text-orange-600 dark:text-orange-400 mb-2">{t('ccs.guide.use_title')}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3"><Fragment set:html={t('ccs.guide.use_desc').replace('`ccs`', '<code class="px-1 py-0.5 bg-slate-200 dark:bg-slate-800 rounded font-mono text-orange-600 dark:text-orange-400">ccs</code>').replace('`claude`', '<code class="px-1 py-0.5 bg-slate-200 dark:bg-slate-800 rounded font-mono">claude</code>')} /></p>

          <!-- Basic usage -->
          <div class="space-y-3">
            <div class="bg-surface-100 dark:bg-slate-950 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
              <div class="text-xs font-medium text-orange-600 dark:text-orange-400 mb-2">{t('ccs.guide.interactive_mode')}</div>
              <div class="bg-white dark:bg-[#0D0D0D] rounded p-2 border border-slate-200 dark:border-slate-700 font-mono text-xs">
                <code class="text-slate-700 dark:text-slate-300">ccs</code>
                <div class="text-slate-500 mt-1">{t('ccs.guide.interactive_desc')}</div>
              </div>
            </div>

            <div class="bg-surface-100 dark:bg-slate-950 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
              <div class="text-xs font-medium text-orange-600 dark:text-orange-400 mb-2">{t('ccs.guide.quick_delegation')}</div>
              <div class="bg-white dark:bg-[#0D0D0D] rounded p-2 border border-slate-200 dark:border-slate-700 font-mono text-xs space-y-2">
                <div>
                  <code class="text-slate-700 dark:text-slate-300">ccs -p "Using ui-ux-pro-max skill, create yoga landing page"</code>
                  <div class="text-slate-500 mt-1">{t('ccs.guide.one_shot_desc')}</div>
                </div>
                <div class="pt-2 border-t border-slate-200 dark:border-slate-700">
                  <code class="text-slate-700 dark:text-slate-300">ccs glm -p "add tests for all components"</code>
                  <div class="text-slate-500 mt-1">{t('ccs.guide.glm_desc')}</div>
                </div>
              </div>
            </div>

            <div class="bg-surface-100 dark:bg-slate-950 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
              <div class="text-xs font-medium text-orange-600 dark:text-orange-400 mb-2">{t('ccs.guide.multi_account')}</div>
              <div class="bg-white dark:bg-[#0D0D0D] rounded p-2 border border-slate-200 dark:border-slate-700 font-mono text-xs space-y-2">
                <div>
                  <div class="text-slate-500 mb-0.5 opacity-80">{t('ccs.guide.setup_profile_1')}</div>
                  <code class="text-slate-700 dark:text-slate-300 font-semibold">ccs auth create work-claude</code>
                </div>
                <div>
                  <div class="text-slate-500 mb-0.5 opacity-80">{t('ccs.guide.setup_profile_2')}</div>
                  <code class="text-slate-700 dark:text-slate-300 font-semibold">ccs auth create my-gemini</code>
                </div>
                <div class="pt-2 border-t border-slate-200 dark:border-slate-800 mt-1">
                  <span class="text-slate-500">{t('ccs.guide.switch_instantly')}</span>
                  <div class="mt-1">
                    <span class="text-orange-600 dark:text-orange-400">ccs work-claude</span> <span class="text-slate-400 text-[10px] mx-1">|</span> <span class="text-orange-600 dark:text-orange-400">ccs my-gemini</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pro Tips -->
      <div class="p-5 rounded-lg bg-gradient-to-r from-amber-500/10 to-yellow-500/10 border border-amber-500/20">
        <h3 class="text-sm font-bold font-sans text-amber-600 dark:text-amber-400 mb-3 flex items-center gap-2">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          {t('ccs.guide.why_title')}
        </h3>
        <div class="space-y-2 text-xs text-slate-600 dark:text-slate-400">
          <div class="flex items-start gap-2">
            <span class="text-amber-500 dark:text-amber-400 mt-0.5">ðŸ’°</span>
            <div>
              <strong class="text-slate-700 dark:text-slate-300">{t('ccs.guide.why_save_money')}</strong> {t('ccs.guide.why_save_money_desc')}
            </div>
          </div>
          <div class="flex items-start gap-2">
            <span class="text-amber-500 dark:text-amber-400 mt-0.5">âš¡</span>
            <div>
              <strong class="text-slate-700 dark:text-slate-300">{t('ccs.guide.why_split')}</strong> {t('ccs.guide.why_split_desc')}
            </div>
          </div>
          <div class="flex items-start gap-2">
            <span class="text-amber-500 dark:text-amber-400 mt-0.5">ðŸš€</span>
            <div>
              <strong class="text-slate-700 dark:text-slate-300">{t('ccs.guide.why_delegation')}</strong> <Fragment set:html={t('ccs.guide.why_delegation_desc').replace('`-p`', '<code class="px-1 py-0.5 bg-slate-200 dark:bg-slate-800 rounded font-mono">-p</code>')} />
            </div>
          </div>
          <div class="flex items-start gap-2">
            <span class="text-amber-500 dark:text-amber-400 mt-0.5">ðŸ”„</span>
            <div>
              <strong class="text-slate-700 dark:text-slate-300">{t('ccs.guide.why_limits')}</strong> {t('ccs.guide.why_limits_desc')}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Common Commands -->
  <div class="glass-card rounded-xl border border-amber-200 dark:border-slate-800 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-amber-500/10 to-orange-500/10 border-b border-amber-200 dark:border-slate-800">
      <h2 id="examples" class="text-2xl font-bold font-sans text-amber-600 dark:text-amber-400 flex items-center gap-3">
        <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="4 17 10 11 4 5"/>
          <line x1="12" y1="19" x2="20" y2="19"/>
        </svg>
        {t('ccs.guide.common_commands_title')}
      </h2>
      <p class="text-sm text-slate-500 dark:text-slate-500 mt-2">{t('ccs.guide.common_commands_desc')}</p>
    </div>

    <div class="p-6 space-y-4">
      <!-- Example 1 -->
      <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-950 border border-slate-200 dark:border-slate-800">
        <div class="flex items-start gap-2 mb-2">
          <span class="px-2 py-0.5 text-xs rounded-full bg-emerald-500/20 text-emerald-600 dark:text-emerald-400 font-medium">{t('ccs.guide.example_beginner_badge')}</span>
          <span class="text-xs text-slate-500">{t('ccs.guide.example_beginner_title')}</span>
        </div>
        <div class="bg-white dark:bg-[#0D0D0D] rounded p-3 border border-slate-200 dark:border-slate-700 font-mono text-xs">
          <code class="text-slate-700 dark:text-slate-300">
            {t('ccs.guide.example_beginner_cmd')}
          </code>
        </div>
      </div>

      <!-- Example 2 -->
      <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-950 border border-slate-200 dark:border-slate-800">
        <div class="flex items-start gap-2 mb-2">
          <span class="px-2 py-0.5 text-xs rounded-full bg-amber-500/20 text-amber-600 dark:text-amber-400 font-medium">{t('ccs.guide.example_intermediate_badge')}</span>
          <span class="text-xs text-slate-500">{t('ccs.guide.example_intermediate_title')}</span>
        </div>
        <div class="bg-white dark:bg-[#0D0D0D] rounded p-3 border border-slate-200 dark:border-slate-700 font-mono text-xs">
          <code class="text-slate-700 dark:text-slate-300">
            {t('ccs.guide.example_intermediate_cmd')}
          </code>
        </div>
      </div>

      <!-- Example 3 -->
      <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-950 border border-slate-200 dark:border-slate-800">
        <div class="flex items-start gap-2 mb-2">
          <span class="px-2 py-0.5 text-xs rounded-full bg-purple-500/20 text-purple-600 dark:text-purple-400 font-medium">{t('ccs.guide.example_interactive_badge')}</span>
          <span class="text-xs text-slate-500">{t('ccs.guide.example_interactive_title')}</span>
        </div>
        <div class="space-y-2">
          <div class="bg-white dark:bg-[#0D0D0D] rounded p-3 border border-slate-200 dark:border-slate-700 font-mono text-xs">
            <code class="text-slate-700 dark:text-slate-300">ccs</code>
            <div class="text-slate-500 mt-1">{t('ccs.guide.example_interactive_desc')}</div>
          </div>
          <div class="pl-4 space-y-2 text-xs text-slate-600 dark:text-slate-400">
            <div>{t('ccs.guide.example_interactive_prompt1')}</div>
            <div>{t('ccs.guide.example_interactive_prompt2')}</div>
            <div>{t('ccs.guide.example_interactive_prompt3')}</div>
            <div>{t('ccs.guide.example_interactive_exit')}</div>
          </div>
        </div>
      </div>

      <!-- Example 4 -->
      <div class="p-4 rounded-lg bg-surface-100 dark:bg-slate-950 border border-slate-200 dark:border-slate-800">
        <div class="flex items-start gap-2 mb-2">
          <span class="px-2 py-0.5 text-xs rounded-full bg-cyan-500/20 text-cyan-600 dark:text-cyan-400 font-medium">{t('ccs.guide.example_context_badge')}</span>
          <span class="text-xs text-slate-500">{t('ccs.guide.example_context_title')}</span>
        </div>
        <div class="bg-white dark:bg-[#0D0D0D] rounded p-3 border border-slate-200 dark:border-slate-700 font-mono text-xs">
          <code class="text-slate-700 dark:text-slate-300">
            {t('ccs.guide.example_context_cmd')}
          </code>
        </div>
      </div>
    </div>
  </div>
</div>
