---
import GuidesLayout from '@/layouts/GuidesLayout.astro';
import ResumeGuide from '@/components/guides/ResumeGuide.astro';
import { useTranslations } from '@/i18n/utils';
import type { Language } from '@/i18n';

const lang: Language = 'vi';
const t = useTranslations(lang);
---

<GuidesLayout
  title={`${t('guides.resume.title')} - ${t('site.title')}`}
  description={t('guides.resume.description')}
  activeTab="resume"
  lang="vi"
>
  <ResumeGuide lang="vi" />
</GuidesLayout>