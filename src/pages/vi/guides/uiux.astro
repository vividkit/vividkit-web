---
import GuidesLayout from '@/layouts/GuidesLayout.astro';
import UIUXGuide from '@/components/guides/UIUXGuide.astro';
import { useTranslations } from '@/i18n/utils';
import type { Language } from '@/i18n';

const lang: Language = 'vi';
const t = useTranslations(lang);
---

<GuidesLayout
  title={`${t('guides.uiux.title')} - ${t('site.title')}`}
  description={t('guides.uiux.description')}
  activeTab="uiux"
  lang="vi"
>
  <UIUXGuide lang="vi" />
</GuidesLayout>