---
import GuidesLayout from '@/layouts/GuidesLayout.astro';
import PermissionsGuide from '@/components/guides/PermissionsGuide.astro';
import { useTranslations } from '@/i18n/utils';
import type { Language } from '@/i18n';

const lang: Language = 'vi';
const t = useTranslations(lang);
---

<GuidesLayout
  title={`${t('guides.permissions.title')} - ${t('site.title')}`}
  description={t('guides.permissions.description')}
  activeTab="permissions"
  lang="vi"
>
  <PermissionsGuide lang="vi" />
</GuidesLayout>