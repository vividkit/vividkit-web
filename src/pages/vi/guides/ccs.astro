---
import GuidesLayout from '@/layouts/GuidesLayout.astro';
import CCSGuide from '@/components/guides/CCSGuide.astro';
import { useTranslations } from '@/i18n/utils';
import type { Language } from '@/i18n';

const lang: Language = 'vi';
const t = useTranslations(lang);
---

<GuidesLayout
  title={`${t('guides.ccs.title')} - ${t('site.title')}`}
  description={t('guides.ccs.description')}
  activeTab="ccs"
  lang="vi"
>
  <CCSGuide lang="vi" />
</GuidesLayout>